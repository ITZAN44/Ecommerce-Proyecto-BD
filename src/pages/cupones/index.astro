                        {cupon.estado}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <div class="flex gap-2">
                        <button
                          onclick={`validarCupon(${JSON.stringify(cupon.codigo_cupon)})`}
                          class="text-blue-600 hover:text-blue-800 font-semibold hover:bg-blue-50 p-2 rounded-lg transition-colors"
                          title="Validar Cup√≥n"
                        >
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                        </button>
                        <button
                          onclick={`editar(${cupon.cupon_id}, ${JSON.stringify(cupon.codigo_cupon)}, ${JSON.stringify(cupon.tipo_descuento)}, ${cupon.valor_descuento}, ${JSON.stringify(cupon.fecha_expiracion)}, ${JSON.stringify(cupon.usos_disponibles)})`}
                          class="text-amber-600 hover:text-amber-800 font-semibold hover:bg-amber-50 p-2 rounded-lg transition-colors"
                          title="Editar"
                        >
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                        </button>
                        <button
                          onclick={`cambiarEstado(${cupon.cupon_id}, ${JSON.stringify(cupon.estado === 'activo' ? 'inactivo' : 'activo')})`}
                          class={`font-semibold p-2 rounded-lg transition-colors ${
                            cupon.estado === 'activo' 
                              ? 'text-red-600 hover:text-red-800 hover:bg-red-50' 
                              : 'text-green-600 hover:text-green-800 hover:bg-green-50'
                          }`}
                          title={cupon.estado === 'activo' ? 'Desactivar' : 'Activar'}
                        >
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={
                              cupon.estado === 'activo' 
                                ? "M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"
                                : "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            }/>
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear Cup√≥n -->
  <div id="modal-crear" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative bg-white rounded-2xl shadow-2xl max-w-lg w-full animate-slideIn">
      <div class="bg-gradient-to-r from-amber-600 to-orange-600 rounded-t-2xl px-6 py-5">
        <h3 class="text-2xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Crear Nuevo Cup√≥n
        </h3>
      </div>
      
      <form action="/api/cupones" method="POST" class="p-6">
        <div class="space-y-5">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              C√≥digo del Cup√≥n <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              name="codigo_cupon"
              required
              placeholder="Ej: VERANO2025"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 outline-none font-mono uppercase"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Tipo de Descuento <span class="text-red-500">*</span>
            </label>
            <select
              name="tipo_descuento"
              id="tipo-crear"
              required
              onchange="toggleTipoDescuento('crear')"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 outline-none"
            >
              <option value="porcentaje">üìä Porcentaje (%)</option>
              <option value="fijo">üíµ Monto Fijo ($)</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Valor del Descuento <span class="text-red-500">*</span>
            </label>
            <div class="relative">
              <span id="simbolo-crear" class="absolute left-4 top-3 text-slate-500 font-semibold">%</span>
              <input
                type="number"
                name="valor_descuento"
                id="valor-crear"
                required
                min="0"
                step="0.01"
                class="w-full pl-8 pr-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 outline-none"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Fecha de Expiraci√≥n (Opcional)
            </label>
            <input
              type="date"
              name="fecha_expiracion"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 outline-none"
            />
            <p class="mt-1 text-xs text-slate-500">Dejar vac√≠o para cup√≥n sin expiraci√≥n</p>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Usos Disponibles (Opcional)
            </label>
            <input
              type="number"
              name="usos_disponibles"
              min="0"
              placeholder="Dejar vac√≠o para usos ilimitados"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>
        </div>
        
        <div class="flex gap-3 mt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-700 hover:to-orange-700 text-white font-semibold py-3 px-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
          >
            Crear Cup√≥n
          </button>
          <button
            type="button"
            onclick="document.getElementById('modal-crear').classList.add('hidden')"
            class="px-6 bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-3 rounded-xl transition-all duration-200"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Editar Cup√≥n -->
  <div id="modal-editar" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative bg-white rounded-2xl shadow-2xl max-w-lg w-full animate-slideIn">
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-t-2xl px-6 py-5">
        <h3 class="text-2xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Editar Cup√≥n
        </h3>
      </div>
      
      <form action="/api/cupones" method="POST" class="p-6">
        <input type="hidden" name="_method" value="PUT" />
        <input type="hidden" name="cupon_id" id="edit-cupon-id" />
        
        <div class="space-y-5">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              C√≥digo del Cup√≥n <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              name="codigo_cupon"
              id="edit-codigo"
              required
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none font-mono uppercase"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Tipo de Descuento <span class="text-red-500">*</span>
            </label>
            <select
              name="tipo_descuento"
              id="tipo-edit"
              required
              onchange="toggleTipoDescuento('edit')"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
            >
              <option value="porcentaje">üìä Porcentaje (%)</option>
              <option value="fijo">üíµ Monto Fijo ($)</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Valor del Descuento <span class="text-red-500">*</span>
            </label>
            <div class="relative">
              <span id="simbolo-edit" class="absolute left-4 top-3 text-slate-500 font-semibold">%</span>
              <input
                type="number"
                name="valor_descuento"
                id="edit-valor"
                required
                min="0"
                step="0.01"
                class="w-full pl-8 pr-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Fecha de Expiraci√≥n (Opcional)
            </label>
            <input
              type="date"
              name="fecha_expiracion"
              id="edit-fecha"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Usos Disponibles (Opcional)
            </label>
            <input
              type="number"
              name="usos_disponibles"
              id="edit-usos"
              min="0"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>
        </div>
        
        <div class="flex gap-3 mt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
          >
            Guardar Cambios
          </button>
          <button
            type="button"
            onclick="document.getElementById('modal-editar').classList.add('hidden')"
            class="px-6 bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-3 rounded-xl transition-all duration-200"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function toggleTipoDescuento(modal) {
      const select = document.getElementById(`tipo-${modal}`);
      const simbolo = document.getElementById(`simbolo-${modal}`);
      
      if (select.value === 'porcentaje') {
        simbolo.textContent = '%';
      } else {
        simbolo.textContent = '$';
      }
    }

    function editar(cupon_id, codigo, tipo, valor, fecha, usos) {
      try {
        document.getElementById('edit-cupon-id').value = cupon_id;
        document.getElementById('edit-codigo').value = codigo;
        document.getElementById('tipo-edit').value = tipo;
        document.getElementById('edit-valor').value = valor;
        document.getElementById('edit-fecha').value = fecha ? fecha.split('T')[0] : '';
        document.getElementById('edit-usos').value = usos || '';
        toggleTipoDescuento('edit');
        document.getElementById('modal-editar').classList.remove('hidden');
      } catch (error) {
        console.error('Error en funci√≥n editar:', error);
        alert('Error al abrir el formulario de edici√≥n');
      }
    }

    async function validarCupon(codigo) {
      try {
        const response = await fetch(`/api/cupones/validar?codigo=${encodeURIComponent(codigo)}`);
        const data = await response.json();
        
        if (data.valido) {
          alert(`‚úÖ Cup√≥n "${codigo}" es V√ÅLIDO\n\n${data.mensaje}`);
        } else {
          alert(`‚ùå Cup√≥n "${codigo}" NO es v√°lido\n\n${data.mensaje}`);
        }
      } catch (error) {
        console.error('Error al validar cup√≥n:', error);
        alert('Error al validar el cup√≥n');
      }
    }

    async function cambiarEstado(cupon_id, nuevoEstado) {
      if (!confirm(`¬øEst√°s seguro de ${nuevoEstado === 'activo' ? 'activar' : 'desactivar'} este cup√≥n?`)) return;
      
      try {
        const formData = new FormData();
        formData.append('_method', 'PATCH');
        formData.append('cupon_id', cupon_id);
        formData.append('estado', nuevoEstado);
        
        const response = await fetch('/api/cupones', {
          method: 'POST',
          body: formData
        });
        
        if (response.ok) {
          location.reload();
        } else {
          alert('Error al cambiar el estado');
        }
      } catch (error) {
        console.error('Error al cambiar estado:', error);
        alert('Error al cambiar el estado');
      }
    }

    // Cerrar modales con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-crear').classList.add('hidden');
        document.getElementById('modal-editar').classList.add('hidden');
      }
    });

    // Cerrar modales al hacer clic fuera
    ['modal-crear', 'modal-editar'].forEach(modalId => {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.addEventListener('click', (e) => {
          if (e.target.id === modalId) {
            e.target.classList.add('hidden');
          }
        });
      }
    });
  </script>
