---
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

let cupones: any[] = [];
let error = '';

try {
  const result = await query(`
    SELECT cupon_id, codigo_cupon, tipo_descuento, valor_descuento, 
           fecha_expiracion, usos_disponibles, estado, fecha_creacion
    FROM cupones
    ORDER BY cupon_id DESC
  `);
  cupones = result.rows;
} catch (err) {
  error = 'Error al cargar cupones: ' + (err as Error).message;
  console.error(err);
}

// Stats calculations
const hoy = new Date();
const activos = cupones.filter(c => c.estado === 'activo').length;
const inactivos = cupones.filter(c => c.estado === 'inactivo').length;
const expirados = cupones.filter(c => {
  if (c.estado === 'expirado') return true;
  if (c.fecha_expiracion) {
    const fechaExp = new Date(c.fecha_expiracion);
    return fechaExp < hoy;
  }
  return false;
}).length;
---

<Layout title="Cupones de Descuento">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-amber-50 to-slate-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
