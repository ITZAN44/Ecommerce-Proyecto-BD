---
import Icon from '../../components/Icon.astro';
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

let cupones: any[] = [];
let error = '';

try {
  const result = await query(`
    SELECT cupon_id, codigo_cupon, tipo_descuento, valor_descuento,
           fecha_expiracion, usos_disponibles, estado, fecha_creacion
    FROM cupones
    ORDER BY cupon_id DESC
  `);
  cupones = result.rows;
} catch (err) {
  error = 'Error al cargar cupones: ' + (err as Error).message;
  console.error(err);
}

const hoy = new Date();
const activos = cupones.filter(c => c.estado === 'activo').length;
const inactivos = cupones.filter(c => c.estado === 'inactivo').length;
const expirados = cupones.filter(c => {
  if (c.estado === 'expirado') return true;
  if (c.fecha_expiracion) {
    const fechaExp = new Date(c.fecha_expiracion);
    return fechaExp < hoy;
  }
  return false;
}).length;
---

<Layout title="Cupones de Descuento">
  <div class="container">
    <div class="content-wrapper">

      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="page-title">
              <Icon name="ticket" size={40} /> Cupones de Descuento
            </h1>
            <p class="mt-2" style="color: var(--text-secondary);">Gestiona cupones, promociones y descuentos</p>
          </div>
          <button
            onclick="document.getElementById('modal-crear').classList.remove('hidden')"
            class="btn-primary"
          >
            <Icon name="plus" size={20} />
            Nuevo Cupón
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 border-l-4 p-4 rounded-lg" style="background-color: rgba(220, 38, 38, 0.1); border-color: var(--accent-red);">
          <div class="flex items-center gap-2">
            <Icon name="x-circle" size={20} />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Total Cupones</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{cupones.length}</p>
            </div>
            <div style="color: var(--text-secondary);">
              <Icon name="ticket" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Activos</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{activos}</p>
            </div>
            <div style="color: var(--accent-green);">
              <Icon name="check-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Inactivos</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{inactivos}</p>
            </div>
            <div style="color: var(--text-tertiary);">
              <Icon name="minus-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Expirados</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{expirados}</p>
            </div>
            <div style="color: var(--accent-red);">
              <Icon name="clock" size={32} />
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Cupones -->
      <div class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="border-b" style="background-color: var(--bg-tertiary); border-color: var(--border-color);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Código</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Tipo</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Descuento</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Expiración</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Usos Disponibles</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Estado</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y" style="border-color: var(--border-color);">
              {cupones.map((cupon) => {
                const hoy = new Date();
                const fechaExp = cupon.fecha_expiracion ? new Date(cupon.fecha_expiracion) : null;
                const estaExpirado = fechaExp && fechaExp < hoy;

                return (
                  <tr class="transition-colors duration-150" style="background-color: var(--bg-secondary);" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor='var(--bg-secondary)'">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center gap-2">
                        <Icon name="ticket" size={20} />
                        <span class="font-mono text-sm font-bold" style="color: var(--accent-yellow);">{cupon.codigo_cupon}</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-bold rounded-full ${
                        cupon.tipo_descuento === 'porcentaje'
                          ? 'bg-blue-500/10'
                          : 'bg-purple-500/10'
                      }`} style={`color: ${cupon.tipo_descuento === 'porcentaje' ? 'var(--accent-blue)' : 'var(--accent-purple)'}`}>
                        <Icon name={cupon.tipo_descuento === 'porcentaje' ? 'chart-bar' : 'currency-dollar'} size={14} />
                        {cupon.tipo_descuento === 'porcentaje' ? 'Porcentaje' : 'Fijo'}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="text-lg font-bold" style="color: var(--accent-green);">
                        {cupon.tipo_descuento === 'porcentaje'
                          ? `${parseFloat(cupon.valor_descuento).toFixed(0)}%`
                          : `$${parseFloat(cupon.valor_descuento).toFixed(2)}`}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      {cupon.fecha_expiracion ? (
                        <div class="text-sm">
                          <div class={`font-semibold`} style={`color: ${estaExpirado ? 'var(--accent-red)' : 'var(--text-primary)'}`}>
                            {new Date(cupon.fecha_expiracion).toLocaleDateString('es-ES')}
                          </div>
                          {estaExpirado && (
                            <span class="text-xs font-medium flex items-center gap-1 mt-1" style="color: var(--accent-red);">
                              <Icon name="exclamation-triangle" size={12} />
                              Expirado
                            </span>
                          )}
                        </div>
                      ) : (
                        <span class="text-sm italic" style="color: var(--text-secondary);">Sin expiración</span>
                      )}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      {cupon.usos_disponibles !== null ? (
                        <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-bold ${
                          cupon.usos_disponibles > 10 ? 'bg-green-500/10' :
                          cupon.usos_disponibles > 0 ? 'bg-yellow-500/10' :
                          'bg-red-500/10'
                        }`} style={`color: ${cupon.usos_disponibles > 10 ? 'var(--accent-green)' : cupon.usos_disponibles > 0 ? 'var(--accent-yellow)' : 'var(--accent-red)'}`}>
                          {cupon.usos_disponibles}
                        </span>
                      ) : (
                        <span class="text-sm italic" style="color: var(--text-secondary);">Ilimitado</span>
                      )}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-bold rounded-full ${
                        cupon.estado === 'activo' ? 'bg-green-500/10' :
                        cupon.estado === 'expirado' ? 'bg-red-500/10' :
                        'bg-gray-500/10'
                      }`} style={`color: ${cupon.estado === 'activo' ? 'var(--accent-green)' : cupon.estado === 'expirado' ? 'var(--accent-red)' : 'var(--text-tertiary)'}`}>
                        <Icon name={cupon.estado === 'activo' ? 'check-circle' : cupon.estado === 'expirado' ? 'clock' : 'minus-circle'} size={14} />
                        {cupon.estado}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <div class="flex gap-2">
                        <button
                          onclick={`validarCupon(${JSON.stringify(cupon.codigo_cupon)})`}
                          class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style="color: var(--accent-blue);"
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          title="Validar Cupón"
                        >
                          <Icon name="shield-check" size={18} />
                        </button>
                        <button
                          onclick={`editar(${cupon.cupon_id}, ${JSON.stringify(cupon.codigo_cupon)}, ${JSON.stringify(cupon.tipo_descuento)}, ${cupon.valor_descuento}, ${JSON.stringify(cupon.fecha_expiracion)}, ${JSON.stringify(cupon.usos_disponibles)})`}
                          class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style="color: var(--accent-yellow);"
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          title="Editar"
                        >
                          <Icon name="pencil" size={18} />
                        </button>
                        <button
                          onclick={`cambiarEstado(${cupon.cupon_id}, ${JSON.stringify(cupon.estado === 'activo' ? 'inactivo' : 'activo')})`}
                          class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style={`color: ${cupon.estado === 'activo' ? 'var(--accent-red)' : 'var(--accent-green)'}`}
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          title={cupon.estado === 'activo' ? 'Desactivar' : 'Activar'}
                        >
                          <Icon name={cupon.estado === 'activo' ? 'x-circle' : 'check-circle'} size={18} />
                        </button>
                      </div>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear Cupón -->
  <div id="modal-crear" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="fixed inset-0 bg-black bg-opacity-70 transition-opacity" onclick="document.getElementById('modal-crear').classList.add('hidden')"></div>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg transform overflow-hidden rounded-2xl p-6 shadow-2xl transition-all" style="background-color: var(--bg-secondary);">
        <div class="border-b pb-4 mb-6" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="ticket" size={28} />
            Crear Nuevo Cupón
          </h3>
        </div>

        <form action="/api/cupones" method="POST">
          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Código del Cupón <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="text"
                name="codigo_cupon"
                required
                placeholder="Ej: VERANO2025"
                class="input font-mono uppercase"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Tipo de Descuento <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="tipo_descuento"
                id="tipo-crear"
                required
                onchange="toggleTipoDescuento('crear')"
                class="input"
              >
                <option value="porcentaje">Porcentaje (%)</option>
                <option value="fijo">Monto Fijo ($)</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Valor del Descuento <span style="color: var(--accent-red);">*</span>
              </label>
              <div class="relative">
                <span id="simbolo-crear" class="absolute left-4 top-3 font-semibold" style="color: var(--text-tertiary);">%</span>
                <input
                  type="number"
                  name="valor_descuento"
                  id="valor-crear"
                  required
                  min="0"
                  step="0.01"
                  class="input pl-8"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Fecha de Expiración (Opcional)
              </label>
              <input
                type="date"
                name="fecha_expiracion"
                class="input"
              />
              <p class="mt-1 text-xs" style="color: var(--text-tertiary);">Dejar vacío para cupón sin expiración</p>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Usos Disponibles (Opcional)
              </label>
              <input
                type="number"
                name="usos_disponibles"
                min="0"
                placeholder="Dejar vacío para usos ilimitados"
                class="input"
              />
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button type="submit" class="flex-1 btn-primary">
              Crear Cupón
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-crear').classList.add('hidden')"
              class="btn-secondary"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Editar Cupón -->
  <div id="modal-editar" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="fixed inset-0 bg-black bg-opacity-70 transition-opacity" onclick="document.getElementById('modal-editar').classList.add('hidden')"></div>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg transform overflow-hidden rounded-2xl p-6 shadow-2xl transition-all" style="background-color: var(--bg-secondary);">
        <div class="border-b pb-4 mb-6" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="pencil" size={28} />
            Editar Cupón
          </h3>
        </div>

        <form action="/api/cupones" method="POST">
          <input type="hidden" name="_method" value="PUT" />
          <input type="hidden" name="cupon_id" id="edit-cupon-id" />

          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Código del Cupón <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="text"
                name="codigo_cupon"
                id="edit-codigo"
                required
                class="input font-mono uppercase"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Tipo de Descuento <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="tipo_descuento"
                id="tipo-edit"
                required
                onchange="toggleTipoDescuento('edit')"
                class="input"
              >
                <option value="porcentaje">Porcentaje (%)</option>
                <option value="fijo">Monto Fijo ($)</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Valor del Descuento <span style="color: var(--accent-red);">*</span>
              </label>
              <div class="relative">
                <span id="simbolo-edit" class="absolute left-4 top-3 font-semibold" style="color: var(--text-tertiary);">%</span>
                <input
                  type="number"
                  name="valor_descuento"
                  id="edit-valor"
                  required
                  min="0"
                  step="0.01"
                  class="input pl-8"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Fecha de Expiración (Opcional)
              </label>
              <input
                type="date"
                name="fecha_expiracion"
                id="edit-fecha"
                class="input"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Usos Disponibles (Opcional)
              </label>
              <input
                type="number"
                name="usos_disponibles"
                id="edit-usos"
                min="0"
                class="input"
              />
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button type="submit" class="flex-1 btn-primary">
              Guardar Cambios
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-editar').classList.add('hidden')"
              class="btn-secondary"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function toggleTipoDescuento(modal) {
      const select = document.getElementById(`tipo-${modal}`);
      const simbolo = document.getElementById(`simbolo-${modal}`);

      if (select.value === 'porcentaje') {
        simbolo.textContent = '%';
      } else {
        simbolo.textContent = '$';
      }
    }

    function editar(cupon_id, codigo, tipo, valor, fecha, usos) {
      try {
        document.getElementById('edit-cupon-id').value = cupon_id;
        document.getElementById('edit-codigo').value = codigo;
        document.getElementById('tipo-edit').value = tipo;
        document.getElementById('edit-valor').value = valor;
        document.getElementById('edit-fecha').value = fecha ? fecha.split('T')[0] : '';
        document.getElementById('edit-usos').value = usos || '';
        toggleTipoDescuento('edit');
        document.getElementById('modal-editar').classList.remove('hidden');
      } catch (error) {
        console.error('Error en función editar:', error);
        alert('Error al abrir el formulario de edición');
      }
    }

    async function validarCupon(codigo) {
      try {
        const response = await fetch(`/api/cupones/validar?codigo=${encodeURIComponent(codigo)}`);
        const data = await response.json();

        if (data.valido) {
          alert(`✅ Cupón "${codigo}" es VÁLIDO\n\n${data.mensaje}`);
        } else {
          alert(`❌ Cupón "${codigo}" NO es válido\n\n${data.mensaje}`);
        }
      } catch (error) {
        console.error('Error al validar cupón:', error);
        alert('Error al validar el cupón');
      }
    }

    async function cambiarEstado(cupon_id, nuevoEstado) {
      if (!confirm(`¿Estás seguro de ${nuevoEstado === 'activo' ? 'activar' : 'desactivar'} este cupón?`)) return;

      try {
        const formData = new FormData();
        formData.append('_method', 'PATCH');
        formData.append('cupon_id', cupon_id);
        formData.append('estado', nuevoEstado);

        const response = await fetch('/api/cupones', {
          method: 'POST',
          body: formData
        });

        if (response.ok) {
          location.reload();
        } else {
          alert('Error al cambiar el estado');
        }
      } catch (error) {
        console.error('Error al cambiar estado:', error);
        alert('Error al cambiar el estado');
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-crear').classList.add('hidden');
        document.getElementById('modal-editar').classList.add('hidden');
      }
    });

    ['modal-crear', 'modal-editar'].forEach(modalId => {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.addEventListener('click', (e) => {
          if (e.target.id === modalId) {
            e.target.classList.add('hidden');
          }
        });
      }
    });
  </script>
</Layout>
