                const hoy = new Date();
                const fechaExp = cupon.fecha_expiracion ? new Date(cupon.fecha_expiracion) : null;
                const estaExpirado = fechaExp && fechaExp < hoy;
                
                return (
                  <tr class="hover:bg-slate-50 transition-colors duration-150">
