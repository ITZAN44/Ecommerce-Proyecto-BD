            </div>
          </div>
          <button
            onclick="document.getElementById('modal-crear').classList.remove('hidden')"
            class="btn-primary inline-flex items-center gap-2"
          >
            <Icon name="plus" size={20} />
            Crear Pedido
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 p-4 rounded-lg" style="background-color: rgba(239, 68, 68, 0.1); border-left: 4px solid var(--accent-red);">
          <div class="flex items-center gap-2">
            <Icon name="x-circle" size={20} style="color: var(--accent-red);" />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-6 gap-4 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-medium mb-1" style="color: var(--text-muted);">Pendientes</p>
              <p class="text-3xl font-bold" style="color: var(--text-primary);">{pendientes}</p>
            </div>
            <Icon name="clock" size={32} style="color: var(--accent-yellow);" />
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-medium mb-1" style="color: var(--text-muted);">Pagados</p>
              <p class="text-3xl font-bold" style="color: var(--text-primary);">{pagados}</p>
            </div>
            <Icon name="check-circle" size={32} style="color: var(--accent-green);" />
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-medium mb-1" style="color: var(--text-muted);">Enviados</p>
              <p class="text-3xl font-bold" style="color: var(--text-primary);">{enviados}</p>
            </div>
            <Icon name="truck" size={32} style="color: var(--accent-blue);" />
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-medium mb-1" style="color: var(--text-muted);">Completados</p>
              <p class="text-3xl font-bold" style="color: var(--text-primary);">{completados}</p>
            </div>
            <Icon name="check-badge" size={32} style="color: var(--accent-purple);" />
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-medium mb-1" style="color: var(--text-muted);">Cancelados</p>
              <p class="text-3xl font-bold" style="color: var(--text-primary);">{cancelados}</p>
            </div>
            <Icon name="x-circle" size={32} style="color: var(--accent-red);" />
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-xs font-medium mb-1" style="color: var(--text-muted);">Total Ventas</p>
              <p class="text-2xl font-bold" style="color: var(--text-primary);">${totalVentas.toFixed(2)}</p>
            </div>
            <Icon name="currency-dollar" size={32} style="color: var(--accent-green);" />
          </div>
        </div>
      </div>

      <!-- Tabla de Pedidos -->
      <div class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y" style="border-color: var(--border-color);">
            <thead style="background-color: var(--bg-tertiary);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Pedido #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Direcci√≥n</th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Total</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Estado</th>
