                    </div>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-bold rounded-full ${
                      pedido.estado_pedido === 'completado' ? 'bg-purple-500/10 text-purple-400 border border-purple-500/30' :
                      pedido.estado_pedido === 'enviado' ? 'bg-blue-500/10 text-blue-400 border border-blue-500/30' :
                      pedido.estado_pedido === 'pagado' ? 'bg-green-500/10 text-green-400 border border-green-500/30' :
                      pedido.estado_pedido === 'cancelado' ? 'bg-red-500/10 text-red-400 border border-red-500/30' :
                      'bg-yellow-500/10 text-yellow-400 border border-yellow-500/30'
                    }`}>
                      <Icon name={pedido.estado_pedido === 'completado' ? 'check-badge' : pedido.estado_pedido === 'enviado' ? 'truck' : pedido.estado_pedido === 'pagado' ? 'check-circle' : pedido.estado_pedido === 'cancelado' ? 'x-circle' : 'clock'} size={14} />
                      {pedido.estado_pedido}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center text-sm" style="color: var(--text-secondary);">
                    {new Date(pedido.fecha_pedido).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric'
                    })}
                  </td>
                  <td class="px-6 py-4 text-center">
                    {pedido.codigo_cupon ? (
                      <span class="text-xs font-mono px-2 py-1 rounded" style="background-color: rgba(245, 158, 11, 0.1); color: var(--accent-yellow); border: 1px solid rgba(245, 158, 11, 0.3);">{pedido.codigo_cupon}</span>
                    ) : (
                      <span style="color: var(--text-muted);">-</span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex gap-2 justify-end">
                      <button
                        data-pedido-id={pedido.pedido_id}
                        data-estado={pedido.estado_pedido}
                        data-action="ver-timeline"
                        class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-blue);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Ver Timeline"
                      >
                        <Icon name="clock" size={18} />
                      </button>
                      {pedido.estado_pedido === 'pendiente' && !pedido.cupon_id && (
                        <button
                          data-pedido-id={pedido.pedido_id}
                          data-action="aplicar-cupon"
                          class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style="color: var(--accent-yellow);"
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          title="Aplicar Cup√≥n"
                        >
                          <Icon name="ticket" size={18} />
                        </button>
                      )}
                      {['pendiente', 'pagado'].includes(pedido.estado_pedido) && (
                        <button
                          data-pedido-id={pedido.pedido_id}
                          data-action="cancelar"
                          class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style="color: var(--accent-red);"
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          title="Cancelar Pedido"
                        >
                          <Icon name="x-circle" size={18} />
                        </button>
                      )}
                      {pedido.estado_pedido === 'cancelado' && (
                        <button
                          data-pedido-id={pedido.pedido_id}
                          data-action="eliminar"
                          class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style="color: var(--accent-red);"
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          title="Eliminar Permanentemente"
                        >
                          <Icon name="trash" size={18} />
                        </button>
                      )}
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear Pedido -->
  <div id="modal-crear" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-4xl w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="plus" size={28} />
            Crear Nuevo Pedido
          </h3>
        </div>

        <form action="/api/pedidos" method="POST" class="p-6" id="form-crear-pedido">
          <div class="space-y-5">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                  Cliente <span style="color: var(--accent-red);">*</span>
                </label>
                <select
                  name="cliente_id"
                  id="select-cliente"
                  required
                  class="input"
                >
                  <option value="">Seleccionar cliente...</option>
                  {clientes.map((cliente) => (
                    <option value={cliente.cliente_id} data-direcciones={JSON.stringify(cliente.direcciones)}>
                      {cliente.nombre} {cliente.apellido} ({cliente.email})
                    </option>
                  ))}
                </select>
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                  Direcci√≥n de Env√≠o <span style="color: var(--accent-red);">*</span>
                </label>
                <select
                  name="direccion_envio_id"
                  id="select-direccion"
                  required
                  disabled
                  class="input"
                  style="opacity: 0.6;"
                >
                  <option value="">Primero seleccione un cliente</option>
                </select>
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Cup√≥n (Opcional)
              </label>
              <select
                name="cupon_id"
                class="input"
              >
                <option value="">Sin cup√≥n</option>
                {cupones.map((cupon) => (
                  <option value={cupon.cupon_id}>
                    {cupon.codigo_cupon} - {cupon.tipo_descuento === 'porcentaje' ? `${cupon.valor_descuento}%` : `$${cupon.valor_descuento}`} OFF
                  </option>
                ))}
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Productos <span style="color: var(--accent-red);">*</span>
              </label>
              <div id="items-container" class="space-y-3">
                <!-- Items se agregar√°n din√°micamente aqu√≠ -->
              </div>
              <button
                type="button"
                onclick="agregarItem()"
                class="mt-3 font-semibold text-sm flex items-center gap-2 transition-all duration-200 hover:scale-105"
                style="color: var(--accent-blue);"
              >
                <Icon name="plus" size={20} />
                Agregar Producto
              </button>
            </div>

            <input type="hidden" name="items" id="items-json" />

            <div class="border-l-4 p-3 rounded" style="background-color: var(--bg-tertiary); border-color: var(--accent-blue);">
              <p class="text-sm flex items-start gap-2" style="color: var(--text-secondary);">
                <Icon name="information-circle" size={16} />
                El pedido se crear√° en estado "pendiente". Los totales (subtotal, impuestos, total) se calcular√°n autom√°ticamente.
              </p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="btn-primary flex-1"
            >
              Crear Pedido
            </button>
            <button
              type="button"
              onclick="cerrarModalCrear()"
              class="btn-secondary px-6"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Aplicar Cup√≥n -->
  <div id="modal-cupon" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-md w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="ticket" size={28} />
            Aplicar Cup√≥n
          </h3>
        </div>

        <form action="/api/pedidos" method="POST" class="p-6">
          <input type="hidden" name="_method" value="PATCH" />
          <input type="hidden" name="pedido_id" id="cupon-pedido-id" />

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                C√≥digo del Cup√≥n <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="text"
                name="codigo_cupon"
                required
                placeholder="Ej: VERANO20"
                class="input uppercase"
              />
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="flex-1 btn-primary"
            >
              Aplicar Cup√≥n
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-cupon').classList.add('hidden')"
              class="px-6 btn-secondary"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Cancelar Pedido -->
  <div id="modal-cancelar" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-md w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="x-circle" size={28} />
            Cancelar Pedido
          </h3>
        </div>

        <form action="/api/pedidos" method="POST" class="p-6">
          <input type="hidden" name="_method" value="DELETE" />
          <input type="hidden" name="pedido_id" id="cancelar-pedido-id" />

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Motivo de la Cancelaci√≥n <span style="color: var(--accent-red);">*</span>
              </label>
              <textarea
                name="motivo"
                required
                rows="4"
                placeholder="Explique por qu√© se cancela este pedido..."
                class="input resize-none"
              ></textarea>
            </div>

            <div class="border-l-4 p-3 rounded" style="background-color: rgba(220, 38, 38, 0.1); border-color: var(--accent-red);">
              <p class="text-sm flex items-start gap-2" style="color: var(--accent-red);">
                <Icon name="exclamation-triangle" size={16} />
                Esta acci√≥n liberar√° el stock reservado y no se puede deshacer
              </p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="flex-1 btn-danger"
            >
              Confirmar Cancelaci√≥n
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-cancelar').classList.add('hidden')"
              class="px-6 btn-secondary"
            >
              Volver
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Timeline -->
  <div id="modal-timeline" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);" onclick="cerrarTimeline()"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-3xl w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b flex items-center justify-between" style="border-color: var(--border-color);">
          <h3 id="timeline-titulo" class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="clock" size={28} style="color: var(--accent-blue);" />
            Timeline del Pedido
          </h3>
          <button
            onclick="cerrarTimeline()"
            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
            title="Cerrar"
          >
            <Icon name="x-mark" size={24} style="color: var(--text-secondary);" />
          </button>
        </div>

        <div id="timeline-content" class="p-6 max-h-[600px] overflow-y-auto">
          <!-- El contenido del timeline se cargar√° aqu√≠ din√°micamente -->
        </div>

        <div class="px-6 py-4 border-t flex justify-end" style="border-color: var(--border-color);">
          <button
            type="button"
            onclick="cerrarTimeline()"
            class="btn-secondary px-6"
          >
            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script is:inline define:vars={{ stockDisponible }}>
    let itemCount = 0;

    function cargarDirecciones() {
      const selectCliente = document.getElementById('select-cliente');
      const selectDireccion = document.getElementById('select-direccion');
      const selectedOption = selectCliente.options[selectCliente.selectedIndex];

      if (selectedOption.value) {
        const direcciones = JSON.parse(selectedOption.getAttribute('data-direcciones'));

        selectDireccion.innerHTML = '';

        if (direcciones && direcciones.length > 0 && direcciones[0].direccion_id) {
          selectDireccion.innerHTML = '<option value="">Seleccionar direcci√≥n...</option>';
          direcciones.forEach(dir => {
            const option = document.createElement('option');
            option.value = dir.direccion_id;
            option.textContent = `${dir.direccion_linea_1}, ${dir.ciudad}, ${dir.pais}`;
            selectDireccion.appendChild(option);
          });
          selectDireccion.disabled = false;
        } else {
          selectDireccion.innerHTML = '<option value="">‚ö†Ô∏è Este cliente no tiene direcciones activas</option>';
          selectDireccion.disabled = true;
          alert('‚ö†Ô∏è El cliente seleccionado no tiene direcciones registradas.\n\nPor favor, ve al m√≥dulo de Clientes y agrega una direcci√≥n primero.');
        }
      } else {
        selectDireccion.innerHTML = '<option value="">Primero seleccione un cliente</option>';
        selectDireccion.disabled = true;
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      const selectCliente = document.getElementById('select-cliente');
      if (selectCliente) {
        selectCliente.addEventListener('change', cargarDirecciones);
      }

      document.querySelectorAll('.btn-action').forEach(btn => {
        btn.addEventListener('click', function() {
          const pedidoId = this.getAttribute('data-pedido-id');
          const action = this.getAttribute('data-action');

          if (action === 'aplicar-cupon') {
            aplicarCupon(pedidoId);
          } else if (action === 'cancelar') {
            cancelarPedido(pedidoId);
          } else if (action === 'eliminar') {
            eliminarPedido(pedidoId);
          } else if (action === 'ver-timeline') {
            const estadoActual = this.getAttribute('data-estado');
            verTimeline(pedidoId, estadoActual);
          }
        });
      });
    });

    function agregarItem() {
      const container = document.getElementById('items-container');
      const itemId = itemCount++;

      const itemDiv = document.createElement('div');
      itemDiv.className = 'flex gap-2 items-start';
      itemDiv.id = `item-${itemId}`;
      itemDiv.innerHTML = `
        <select id="stock-${itemId}" required class="flex-1 px-3 py-2 border-2 border-slate-300 rounded-lg text-sm">
          <option value="">Seleccionar producto...</option>
          ${stockDisponible.map(s =>
            `<option value="${s.stock_id}" data-precio="${s.precio_unitario}" data-disponible="${s.disponible}">
              ${s.nombre_producto} (SKU: ${s.sku}) - $${parseFloat(s.precio_unitario).toFixed(2)} - Disponible: ${s.disponible}
            </option>`
          ).join('')}
        </select>
        <input type="number" id="cantidad-${itemId}" min="1" required placeholder="Cant."
          class="w-24 px-3 py-2 border-2 border-slate-300 rounded-lg text-sm" />
        <button type="button" onclick="eliminarItem(${itemId})"
          class="text-red-600 hover:text-red-800 hover:bg-red-50 p-2 rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      `;

      container.appendChild(itemDiv);
    }

    function eliminarItem(itemId) {
      document.getElementById(`item-${itemId}`).remove();
    }

    function cerrarModalCrear() {
      document.getElementById('modal-crear').classList.add('hidden');
      document.getElementById('items-container').innerHTML = '';
      itemCount = 0;
    }

    function aplicarCupon(pedidoId) {
      document.getElementById('cupon-pedido-id').value = pedidoId;
      document.getElementById('modal-cupon').classList.remove('hidden');
    }

    function cancelarPedido(pedidoId) {
      document.getElementById('cancelar-pedido-id').value = pedidoId;
      document.getElementById('modal-cancelar').classList.remove('hidden');
    }

    async function eliminarPedido(pedidoId) {
      if (!confirm(`‚ö†Ô∏è ELIMINAR PEDIDO PERMANENTEMENTE\n\n¬øEst√°s seguro de eliminar el pedido #${pedidoId}?\n\nEsta acci√≥n NO se puede deshacer. Se eliminar√°n tambi√©n los detalles, pagos y env√≠os asociados.\n\nSOLO se pueden eliminar pedidos cancelados.`)) {
        return;
      }

      if (!confirm(`Confirma nuevamente: ¬øEliminar pedido #${pedidoId} de la base de datos?`)) {
        return;
      }

      try {
        const formData = new FormData();
        formData.append('_method', 'DELETE');
        formData.append('pedido_id', pedidoId);
        formData.append('motivo', 'Eliminaci√≥n permanente');
        formData.append('eliminar_fisico', 'true');

        const response = await fetch('/api/pedidos', {
          method: 'POST',
          body: formData
        });

        const url = new URL(response.url);
        const error = url.searchParams.get('error');

        if (error) {
          alert('‚ùå Error: ' + decodeURIComponent(error));
          location.href = '/pedidos';
        } else if (response.redirected || response.ok) {
          alert('‚úÖ Pedido eliminado exitosamente');
          location.href = '/pedidos';
        } else {
          alert('Error al eliminar el pedido');
        }
      } catch (error) {
        console.error('Error al eliminar pedido:', error);
        alert('Error al eliminar el pedido');
      }
    }

    async function verTimeline(pedidoId, estadoActual) {
      const modal = document.getElementById('modal-timeline');
      const contenido = document.getElementById('timeline-content');
      const titulo = document.getElementById('timeline-titulo');

      titulo.textContent = `Timeline del Pedido #${pedidoId}`;
      contenido.innerHTML = '<div class="text-center py-8"><p class="text-gray-500">Cargando timeline...</p></div>';
      modal.classList.remove('hidden');

      try {
        const response = await fetch(`/api/pedidos/timeline?pedido_id=${pedidoId}`);
        const data = await response.json();

        if (!response.ok || data.error) {
          contenido.innerHTML = `
            <div class="text-center py-8">
              <p class="text-red-500">${data.error || 'Error al cargar timeline'}</p>
            </div>
          `;
          return;
        }

        if (!data.timeline || data.timeline.length === 0) {
          contenido.innerHTML = `
            <div class="text-center py-8">
              <p class="text-gray-500">No hay historial de cambios para este pedido</p>
            </div>
          `;
          return;
        }

        renderTimeline(data.timeline, estadoActual);
      } catch (error) {
        console.error('Error cargando timeline:', error);
        contenido.innerHTML = `
          <div class="text-center py-8">
            <p class="text-red-500">Error de conexi√≥n al cargar timeline</p>
          </div>
        `;
      }
    }

    function renderTimeline(timeline, estadoActual) {
      const contenido = document.getElementById('timeline-content');

      const estadoConfig = {
        pendiente: { color: '#f59e0b', label: 'Pendiente', icon: 'clock' },
        pagado: { color: '#3b82f6', label: 'Pagado', icon: 'check-circle' },
        enviado: { color: '#8b5cf6', label: 'Enviado', icon: 'truck' },
        completado: { color: '#10b981', label: 'Completado', icon: 'check-badge' },
        cancelado: { color: '#ef4444', label: 'Cancelado', icon: 'x-circle' }
      };

      const html = timeline.map((item, index) => {
        const config = estadoConfig[item.estado_nuevo] || estadoConfig.pendiente;
        const isFirst = index === 0;
        const isLast = index === timeline.length - 1;
        const fecha = new Date(item.fecha_cambio);
        const fechaFormateada = fecha.toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' });
        const horaFormateada = fecha.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });

        return `
          <div class="relative pl-10 pb-8 ${isLast ? '' : 'border-l-2 border-gray-200 dark:border-gray-700'}" style="margin-left: 20px;">
            ${!isFirst ? `<div class="absolute left-0 top-0 w-0.5 h-6 -ml-px" style="background: ${config.color};"></div>` : ''}
            <div class="absolute left-0 top-6 w-10 h-10 rounded-full border-3 flex items-center justify-center -ml-5"
                 style="background: ${config.color}20; border-color: ${config.color};">
              <svg class="w-5 h-5" style="color: ${config.color};" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                ${getIconPath(config.icon)}
              </svg>
            </div>
            <div class="ml-6 bg-gray-50 dark:bg-gray-800 p-4 rounded-lg border border-gray-200 dark:border-gray-700">
              <div class="flex items-center justify-between mb-2">
                <h4 class="font-bold" style="color: ${config.color};">${config.label}</h4>
                <span class="text-xs px-2 py-1 rounded-full" style="background: ${config.color}20; color: ${config.color};">
                  ${item.estado_anterior ? `${estadoConfig[item.estado_anterior]?.label || item.estado_anterior} ‚Üí ${config.label}` : 'Inicio'}
                </span>
              </div>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
                üìÖ ${fechaFormateada} a las ${horaFormateada}
              </p>
              ${item.usuario ? `<p class="text-sm text-gray-600 dark:text-gray-400 mb-1">üë§ ${item.usuario}</p>` : ''}
              ${item.comentario ? `<p class="text-sm italic mt-2 p-2 bg-blue-50 dark:bg-blue-900/20 rounded border-l-2 border-blue-500">${item.comentario}</p>` : ''}
            </div>
          </div>
        `;
      }).join('');

      contenido.innerHTML = html;
    }

    function getIconPath(icon) {
      const icons = {
        'clock': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>',
        'check-circle': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>',
        'truck': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>',
        'check-badge': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>',
        'x-circle': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>'
      };
      return icons[icon] || icons['clock'];
    }

    function cerrarTimeline() {
      document.getElementById('modal-timeline').classList.add('hidden');
    }

    document.getElementById('form-crear-pedido').addEventListener('submit', (e) => {
      const clienteId = document.getElementById('select-cliente').value;
      if (!clienteId) {
        e.preventDefault();
        alert('Debe seleccionar un cliente');
        return false;
      }

      const direccionId = document.getElementById('select-direccion').value;
      if (!direccionId) {
        e.preventDefault();
        alert('Debe seleccionar una direcci√≥n de env√≠o');
        return false;
      }

      const items = [];
      const container = document.getElementById('items-container');
      const itemDivs = container.querySelectorAll('[id^="item-"]');

      itemDivs.forEach(div => {
        const id = div.id.split('-')[1];
        const stockSelect = document.getElementById(`stock-${id}`);
        const cantidadInput = document.getElementById(`cantidad-${id}`);

        if (stockSelect.value && cantidadInput.value) {
          const disponible = parseInt(stockSelect.options[stockSelect.selectedIndex].getAttribute('data-disponible'));
          const cantidad = parseInt(cantidadInput.value);

          if (cantidad > disponible) {
            e.preventDefault();
            alert(`La cantidad solicitada (${cantidad}) supera el stock disponible (${disponible})`);
            return false;
          }

          items.push({
            stock_id: parseInt(stockSelect.value),
            cantidad: cantidad
          });
        }
      });

      if (items.length === 0) {
        e.preventDefault();
        alert('Debe agregar al menos un producto al pedido');
        return false;
      }

      document.getElementById('items-json').value = JSON.stringify(items);
    });

    window.addEventListener('load', () => {
      if (document.getElementById('modal-crear').classList.contains('hidden')) {
      }
    });

    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.attributeName === 'class') {
          const modal = document.getElementById('modal-crear');
          if (!modal.classList.contains('hidden') && itemCount === 0) {
            agregarItem();
          }
        }
      });
    });

    observer.observe(document.getElementById('modal-crear'), {
      attributes: true,
      attributeFilter: ['class']
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-crear').classList.add('hidden');
        document.getElementById('modal-cupon').classList.add('hidden');
        document.getElementById('modal-cancelar').classList.add('hidden');
        document.getElementById('modal-timeline').classList.add('hidden');
      }
    });

    ['modal-crear', 'modal-cupon', 'modal-cancelar', 'modal-timeline'].forEach(modalId => {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.addEventListener('click', (e) => {
          if (e.target.id === modalId) {
            e.target.classList.add('hidden');
          }
        });
      }
    });
  </script>
