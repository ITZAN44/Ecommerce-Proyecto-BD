                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Cup√≥n</th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y" style="background-color: var(--bg-secondary); border-color: var(--border-color);">ar(--bg-secondary); border-color: var(--border-color);">
              {pedidos.map((pedido) => (
                <tr class="transition-colors duration-150" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor=''">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="shrink-0 h-10 w-10 rounded-full flex items-center justify-center shadow-md" style="background-color: var(--accent-blue);">
                        <span class="text-white font-bold text-sm">#{pedido.pedido_id}</span>
