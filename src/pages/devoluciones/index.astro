---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icon.astro';
import { query } from '../../lib/db';

let devoluciones: any[] = [];
let detallesPedidosCompletados: any[] = [];
let error = '';

const url = new URL(Astro.request.url);
const urlError = url.searchParams.get('error');
if (urlError) {
  error = decodeURIComponent(urlError);
}

try {
  const resultDevoluciones = await query(`
    SELECT
      d.devolucion_id,
      d.detalle_id,
      d.motivo,
      d.cantidad_devuelta,
      d.fecha_solicitud,
      d.estado_devolucion,
      dp.pedido_id,
      dp.cantidad AS cantidad_original,
      dp.precio_unitario_compra,
      c.nombre,
      c.apellido,
      c.email,
      pr.nombre_producto,
      s.sku
    FROM devoluciones d
    INNER JOIN detalle_pedido dp ON d.detalle_id = dp.detalle_id
    INNER JOIN pedidos p ON dp.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    INNER JOIN stock s ON dp.stock_id = s.stock_id
    INNER JOIN productos pr ON s.producto_id = pr.producto_id
    ORDER BY d.devolucion_id DESC
  `);
  devoluciones = resultDevoluciones.rows;

  const resultDetalles = await query(`
    SELECT
      dp.detalle_id,
      dp.pedido_id,
      dp.cantidad,
      dp.precio_unitario_compra,
      p.fecha_pedido,
      p.estado_pedido,
      c.nombre,
      c.apellido,
      c.email,
      pr.nombre_producto,
      s.sku,
      e.fecha_envio
    FROM detalle_pedido dp
    INNER JOIN pedidos p ON dp.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    INNER JOIN stock s ON dp.stock_id = s.stock_id
    INNER JOIN productos pr ON s.producto_id = pr.producto_id
    INNER JOIN envios e ON p.pedido_id = e.pedido_id
    LEFT JOIN devoluciones d ON dp.detalle_id = d.detalle_id
    WHERE p.estado_pedido IN ('completado', 'enviado')
      AND e.estado_envio = 'entregado'
      AND d.devolucion_id IS NULL
      AND e.fecha_envio IS NOT NULL
      AND EXTRACT(DAY FROM (NOW() - e.fecha_envio)) <= 30
    ORDER BY dp.detalle_id DESC
  `);
  detallesPedidosCompletados = resultDetalles.rows;

} catch (err) {
  error = 'Error al cargar devoluciones: ' + (err as Error).message;
  console.error(err);
}

const solicitadas = devoluciones.filter(d => d.estado_devolucion === 'solicitada').length;
const aprobadas = devoluciones.filter(d => d.estado_devolucion === 'aprobada').length;
const reembolsadas = devoluciones.filter(d => d.estado_devolucion === 'reembolsada').length;
const rechazadas = devoluciones.filter(d => d.estado_devolucion === 'rechazada').length;
const totalReembolsado = devoluciones
  .filter(d => d.estado_devolucion === 'reembolsada')
  .reduce((sum, d) => sum + (parseFloat(d.precio_unitario_compra) * d.cantidad_devuelta), 0);
---

<Layout title="Devoluciones">
  <div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-4xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
              <Icon name="arrow-uturn-left" size={40} />
              Devoluciones
            </h1>
            <p class="mt-2" style="color: var(--text-secondary);">Gestiona las devoluciones de productos</p>
          </div>
          <button
            onclick="document.getElementById('modal-procesar').classList.remove('hidden')"
            class="btn-primary"
          >
            <Icon name="plus" size={20} />
            Procesar Devolución
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 p-4 rounded-xl border-l-4" style="background-color: var(--bg-secondary); border-color: var(--accent-red);">
          <div class="flex items-center gap-2">
            <Icon name="x-circle" size={20} />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Solicitadas</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--accent-yellow);">{solicitadas}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="clock" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Aprobadas</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--accent-blue);">{aprobadas}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="check-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Reembolsadas</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--accent-green);">{reembolsadas}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="arrow-uturn-left" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Rechazadas</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--accent-red);">{rechazadas}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="x-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Total Reembolsado</p>
              <p class="text-3xl font-bold mt-2" style="color: var(--accent-purple);">${totalReembolsado.toFixed(2)}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="currency-dollar" size={32} />
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Devoluciones -->
      <div class="card">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead style="background-color: var(--bg-tertiary); border-bottom: 2px solid var(--border-color);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Devolución #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Pedido #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Producto</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Cantidad</th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Monto</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Estado</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Motivo</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Fecha</th>
              </tr>
            </thead>
            <tbody style="border-top: 1px solid var(--border-color);">
              {devoluciones.map((devolucion) => (
                <tr class="border-b transition-colors duration-150" style="border-color: var(--border-color);" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor=''">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <Icon name="arrow-uturn-left" size={20} />
                      <span class="font-semibold" style="color: var(--accent-purple);">#{devolucion.devolucion_id}</span>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm font-semibold" style="color: var(--text-primary);">Pedido #{devolucion.pedido_id}</span>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-bold" style="color: var(--text-primary);">{devolucion.nombre} {devolucion.apellido}</div>
                      <div class="text-xs" style="color: var(--text-tertiary);">{devolucion.email}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-semibold" style="color: var(--text-primary);">{devolucion.nombre_producto}</div>
                      <div class="text-xs" style="color: var(--text-tertiary);">SKU: {devolucion.sku}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class="text-sm font-semibold" style="color: var(--text-secondary);">{devolucion.cantidad_devuelta} / {devolucion.cantidad_original}</span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <span class="text-lg font-bold" style="color: var(--accent-purple);">
                      ${(parseFloat(devolucion.precio_unitario_compra) * devolucion.cantidad_devuelta).toFixed(2)}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex items-center gap-1 px-3 py-1 text-xs font-bold rounded-full ${
                      devolucion.estado_devolucion === 'reembolsada' ? '' :
                      devolucion.estado_devolucion === 'aprobada' ? '' :
                      devolucion.estado_devolucion === 'rechazada' ? '' :
                      ''
                    }`} style={`color: ${
                      devolucion.estado_devolucion === 'reembolsada' ? 'var(--accent-green)' :
                      devolucion.estado_devolucion === 'aprobada' ? 'var(--accent-blue)' :
                      devolucion.estado_devolucion === 'rechazada' ? 'var(--accent-red)' :
                      'var(--accent-yellow)'
                    }; background-color: var(--bg-tertiary);`}>
                      <Icon name={
                        devolucion.estado_devolucion === 'reembolsada' ? 'arrow-uturn-left' :
                        devolucion.estado_devolucion === 'aprobada' ? 'check-circle' :
                        devolucion.estado_devolucion === 'rechazada' ? 'x-circle' :
                        'clock'
                      } size={14} />
                      {devolucion.estado_devolucion}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm" style="color: var(--text-secondary);">
                    {devolucion.motivo ? (
                      <span class="line-clamp-2" title={devolucion.motivo}>{devolucion.motivo}</span>
                    ) : '-'}
                  </td>
                  <td class="px-6 py-4 text-center text-sm" style="color: var(--text-secondary);">
                    {new Date(devolucion.fecha_solicitud).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric'
                    })}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Procesar Devolución -->
  <div id="modal-procesar" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="fixed inset-0 bg-black bg-opacity-70 transition-opacity" onclick="document.getElementById('modal-procesar').classList.add('hidden')"></div>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-3xl transform overflow-hidden rounded-2xl p-6 shadow-2xl transition-all" style="background-color: var(--bg-secondary);">
        <div class="border-b pb-4 mb-6" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="arrow-uturn-left" size={28} />
            Procesar Devolución
          </h3>
        </div>

        <form action="/api/devoluciones" method="POST">
          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Item del Pedido <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="detalle_id"
                id="select-detalle"
                required
                onchange="actualizarInfoDevolucion()"
                class="input"
              >
                <option value="">Seleccionar item...</option>
                {detallesPedidosCompletados.map((detalle) => (
                  <option
                    value={detalle.detalle_id}
                    data-cantidad={detalle.cantidad}
                    data-precio={detalle.precio_unitario_compra}
                    data-producto={detalle.nombre_producto}
                    data-sku={detalle.sku}
                    data-pedido={detalle.pedido_id}
                    data-cliente={`${detalle.nombre} ${detalle.apellido}`}
                  >
                    Pedido #{detalle.pedido_id} - {detalle.nombre_producto} (SKU: {detalle.sku}) - {detalle.nombre} {detalle.apellido}
                  </option>
                ))}
              </select>
              {detallesPedidosCompletados.length === 0 && (
                <p class="mt-2 text-sm" style="color: var(--text-tertiary);">No hay items elegibles para devolución (deben estar enviados y dentro de 30 días)</p>
              )}
            </div>

            <div id="info-devolucion" class="hidden p-4 rounded-xl space-y-2" style="background-color: var(--bg-tertiary);">
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Pedido:</strong> <span id="info-pedido"></span></p>
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Cliente:</strong> <span id="info-cliente"></span></p>
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Producto:</strong> <span id="info-producto"></span></p>
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Cantidad máxima:</strong> <span id="info-cantidad-max"></span></p>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Cantidad a Devolver <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="number"
                name="cantidad_devuelta"
                id="input-cantidad"
                min="1"
                required
                oninput="calcularReembolso()"
                class="input"
                placeholder="Cantidad de items a devolver"
              />
            </div>

            <div id="monto-reembolso-container" class="hidden">
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Monto a Reembolsar
              </label>
              <div class="p-4 rounded-xl" style="background-color: var(--bg-tertiary);">
                <span id="monto-reembolso" class="text-2xl font-bold" style="color: var(--accent-purple);">$0.00</span>
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Motivo de la Devolución <span style="color: var(--accent-red);">*</span>
              </label>
              <textarea
                name="motivo"
                required
                rows="4"
                placeholder="Describa el motivo de la devolución..."
                class="input resize-none"
              ></textarea>
            </div>

            <div class="p-3 rounded border-l-4" style="background-color: var(--bg-tertiary); border-color: var(--accent-yellow);">
              <p class="text-sm flex items-start gap-2" style="color: var(--text-secondary);">
                <Icon name="information-circle" size={16} />
                <span>Al procesar la devolución: se aprobará automáticamente, se devolverá el stock y se generará un reembolso</span>
              </p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button type="submit" class="flex-1 btn-primary">
              Procesar Devolución
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-procesar').classList.add('hidden')"
              class="btn-secondary"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function actualizarInfoDevolucion() {
      const select = document.getElementById('select-detalle');
      const selectedOption = select.options[select.selectedIndex];
      const infoDiv = document.getElementById('info-devolucion');
      const cantidadInput = document.getElementById('input-cantidad');

      if (selectedOption.value) {
        document.getElementById('info-pedido').textContent = '#' + selectedOption.getAttribute('data-pedido');
        document.getElementById('info-cliente').textContent = selectedOption.getAttribute('data-cliente');
        const producto = selectedOption.getAttribute('data-producto');
        const sku = selectedOption.getAttribute('data-sku');
        document.getElementById('info-producto').textContent = `${producto} (SKU: ${sku})`;

        const cantidadMax = selectedOption.getAttribute('data-cantidad');
        document.getElementById('info-cantidad-max').textContent = cantidadMax;

        cantidadInput.max = cantidadMax;
        cantidadInput.value = '';

        infoDiv.classList.remove('hidden');
        document.getElementById('monto-reembolso-container').classList.add('hidden');
      } else {
        infoDiv.classList.add('hidden');
        document.getElementById('monto-reembolso-container').classList.add('hidden');
        cantidadInput.value = '';
      }
    }

    function calcularReembolso() {
      const select = document.getElementById('select-detalle');
      const selectedOption = select.options[select.selectedIndex];
      const cantidadInput = document.getElementById('input-cantidad');
      const montoContainer = document.getElementById('monto-reembolso-container');
      const montoSpan = document.getElementById('monto-reembolso');

      if (selectedOption.value && cantidadInput.value) {
        const cantidad = parseInt(cantidadInput.value);
        const precio = parseFloat(selectedOption.getAttribute('data-precio'));
        const monto = cantidad * precio;

        montoSpan.textContent = '$' + monto.toFixed(2);
        montoContainer.classList.remove('hidden');
      } else {
        montoContainer.classList.add('hidden');
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-procesar').classList.add('hidden');
      }
    });

    const modal = document.getElementById('modal-procesar');
    if (modal) {
      modal.addEventListener('click', (e) => {
        if (e.target.id === 'modal-procesar') {
          e.target.classList.add('hidden');
        }
      });
    }
  </script>
</Layout>
