---
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

let devoluciones: any[] = [];
let detallesPedidosCompletados: any[] = [];
let error = '';

// Capturar error de la URL
const url = new URL(Astro.request.url);
const urlError = url.searchParams.get('error');
if (urlError) {
  error = decodeURIComponent(urlError);
}

try {
  // Obtener devoluciones con información completa
  const resultDevoluciones = await query(`
    SELECT 
      d.devolucion_id,
      d.detalle_id,
      d.motivo,
      d.cantidad_devuelta,
      d.fecha_solicitud,
      d.estado_devolucion,
      dp.pedido_id,
      dp.cantidad AS cantidad_original,
      dp.precio_unitario_compra,
      c.nombre,
      c.apellido,
      c.email,
      pr.nombre_producto,
      s.sku
    FROM devoluciones d
    INNER JOIN detalle_pedido dp ON d.detalle_id = dp.detalle_id
    INNER JOIN pedidos p ON dp.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    INNER JOIN stock s ON dp.stock_id = s.stock_id
    INNER JOIN productos pr ON s.producto_id = pr.producto_id
    ORDER BY d.devolucion_id DESC
  `);
  devoluciones = resultDevoluciones.rows;

  // Obtener detalles de pedidos completados/enviados sin devolución
  const resultDetalles = await query(`
    SELECT 
      dp.detalle_id,
      dp.pedido_id,
      dp.cantidad,
      dp.precio_unitario_compra,
      p.fecha_pedido,
      p.estado_pedido,
      c.nombre,
      c.apellido,
      c.email,
      pr.nombre_producto,
      s.sku,
      e.fecha_envio
    FROM detalle_pedido dp
    INNER JOIN pedidos p ON dp.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    INNER JOIN stock s ON dp.stock_id = s.stock_id
    INNER JOIN productos pr ON s.producto_id = pr.producto_id
    INNER JOIN envios e ON p.pedido_id = e.pedido_id
    LEFT JOIN devoluciones d ON dp.detalle_id = d.detalle_id
    WHERE p.estado_pedido IN ('completado', 'enviado')
      AND e.estado_envio = 'entregado'
      AND d.devolucion_id IS NULL
      AND e.fecha_envio IS NOT NULL
      AND EXTRACT(DAY FROM (NOW() - e.fecha_envio)) <= 30
    ORDER BY dp.detalle_id DESC
  `);
  detallesPedidosCompletados = resultDetalles.rows;

} catch (err) {
  error = 'Error al cargar devoluciones: ' + (err as Error).message;
  console.error(err);
}

const solicitadas = devoluciones.filter(d => d.estado_devolucion === 'solicitada').length;
const aprobadas = devoluciones.filter(d => d.estado_devolucion === 'aprobada').length;
const reembolsadas = devoluciones.filter(d => d.estado_devolucion === 'reembolsada').length;
const rechazadas = devoluciones.filter(d => d.estado_devolucion === 'rechazada').length;
const totalReembolsado = devoluciones
  .filter(d => d.estado_devolucion === 'reembolsada')
  .reduce((sum, d) => sum + (parseFloat(d.precio_unitario_compra) * d.cantidad_devuelta), 0);
---

<Layout title="Devoluciones">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-slate-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent flex items-center gap-3">
              <span class="text-4xl">↩️</span> Devoluciones
            </h1>
            <p class="mt-2 text-slate-600">Gestiona las devoluciones de productos</p>
          </div>
          <button
            onclick="document.getElementById('modal-procesar').classList.remove('hidden')"
            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Procesar Devolución
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <p class="text-red-700 font-medium">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
        <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-yellow-100 text-sm font-medium">Solicitadas</p>
              <p class="text-4xl font-bold mt-2">{solicitadas}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-100 text-sm font-medium">Aprobadas</p>
              <p class="text-4xl font-bold mt-2">{aprobadas}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-100 text-sm font-medium">Reembolsadas</p>
              <p class="text-4xl font-bold mt-2">{reembolsadas}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-red-600 to-red-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-red-100 text-sm font-medium">Rechazadas</p>
              <p class="text-4xl font-bold mt-2">{rechazadas}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-purple-600 to-purple-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-purple-100 text-sm font-medium">Total Reembolsado</p>
              <p class="text-3xl font-bold mt-2">${totalReembolsado.toFixed(2)}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Devoluciones -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-200">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-gradient-to-r from-slate-50 to-slate-100">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Devolución #</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Pedido #</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Producto</th>
                <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">Cantidad</th>
                <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider">Monto</th>
                <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Motivo</th>
                <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">Fecha</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              {devoluciones.map((devolucion) => (
                <tr class="hover:bg-slate-50 transition-colors duration-150">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="shrink-0 h-10 w-10 bg-gradient-to-br from-purple-500 to-pink-600 rounded-full flex items-center justify-center shadow-md">
                        <span class="text-white font-bold text-sm">#{devolucion.devolucion_id}</span>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm font-semibold text-slate-900">Pedido #{devolucion.pedido_id}</span>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-bold text-slate-900">{devolucion.nombre} {devolucion.apellido}</div>
                      <div class="text-xs text-slate-500">{devolucion.email}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-semibold text-slate-900">{devolucion.nombre_producto}</div>
                      <div class="text-xs text-slate-500">SKU: {devolucion.sku}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class="text-sm font-semibold text-slate-700">{devolucion.cantidad_devuelta} / {devolucion.cantidad_original}</span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <span class="text-lg font-bold text-purple-600">
                      ${(parseFloat(devolucion.precio_unitario_compra) * devolucion.cantidad_devuelta).toFixed(2)}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex px-3 py-1 text-xs font-bold rounded-full ${
                      devolucion.estado_devolucion === 'reembolsada' ? 'bg-green-100 text-green-800' :
                      devolucion.estado_devolucion === 'aprobada' ? 'bg-blue-100 text-blue-800' :
                      devolucion.estado_devolucion === 'rechazada' ? 'bg-red-100 text-red-800' :
                      'bg-yellow-100 text-yellow-800'
                    }`}>
                      {devolucion.estado_devolucion}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-600">
                    {devolucion.motivo ? (
                      <span class="line-clamp-2" title={devolucion.motivo}>{devolucion.motivo}</span>
                    ) : '-'}
                  </td>
                  <td class="px-6 py-4 text-center text-sm text-slate-600">
                    {new Date(devolucion.fecha_solicitud).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric'
                    })}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Procesar Devolución -->
  <div id="modal-procesar" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative bg-white rounded-2xl shadow-2xl max-w-3xl w-full animate-slideIn">
      <div class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-t-2xl px-6 py-5">
        <h3 class="text-2xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
          </svg>
          Procesar Devolución
        </h3>
      </div>
      
      <form action="/api/devoluciones" method="POST" class="p-6">
        <div class="space-y-5">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Item del Pedido <span class="text-red-500">*</span>
            </label>
            <select
              name="detalle_id"
              id="select-detalle"
              required
              onchange="actualizarInfoDevolucion()"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 outline-none"
            >
              <option value="">Seleccionar item...</option>
              {detallesPedidosCompletados.map((detalle) => (
                <option 
                  value={detalle.detalle_id} 
                  data-cantidad={detalle.cantidad}
                  data-precio={detalle.precio_unitario_compra}
                  data-producto={detalle.nombre_producto}
                  data-sku={detalle.sku}
                  data-pedido={detalle.pedido_id}
                  data-cliente={`${detalle.nombre} ${detalle.apellido}`}
                >
                  Pedido #{detalle.pedido_id} - {detalle.nombre_producto} (SKU: {detalle.sku}) - {detalle.nombre} {detalle.apellido}
                </option>
              ))}
            </select>
            {detallesPedidosCompletados.length === 0 && (
              <p class="mt-2 text-sm text-slate-500">No hay items elegibles para devolución (deben estar enviados y dentro de 30 días)</p>
            )}
          </div>

          <div id="info-devolucion" class="hidden bg-slate-50 p-4 rounded-xl space-y-2">
            <p class="text-sm text-slate-600"><strong>Pedido:</strong> <span id="info-pedido"></span></p>
            <p class="text-sm text-slate-600"><strong>Cliente:</strong> <span id="info-cliente"></span></p>
            <p class="text-sm text-slate-600"><strong>Producto:</strong> <span id="info-producto"></span></p>
            <p class="text-sm text-slate-600"><strong>Cantidad máxima:</strong> <span id="info-cantidad-max"></span></p>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Cantidad a Devolver <span class="text-red-500">*</span>
            </label>
            <input
              type="number"
              name="cantidad_devuelta"
              id="input-cantidad"
              min="1"
              required
              oninput="calcularReembolso()"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 outline-none"
              placeholder="Cantidad de items a devolver"
            />
          </div>

          <div id="monto-reembolso-container" class="hidden">
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Monto a Reembolsar
            </label>
            <div class="bg-purple-50 border-2 border-purple-200 rounded-xl px-4 py-3">
              <span id="monto-reembolso" class="text-2xl font-bold text-purple-600">$0.00</span>
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Motivo de la Devolución <span class="text-red-500">*</span>
            </label>
            <textarea
              name="motivo"
              required
              rows="4"
              placeholder="Describa el motivo de la devolución..."
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 outline-none resize-none"
            ></textarea>
          </div>

          <div class="bg-amber-50 border-l-4 border-amber-500 p-3 rounded">
            <p class="text-sm text-amber-800">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Al procesar la devolución: se aprobará automáticamente, se devolverá el stock y se generará un reembolso
            </p>
          </div>
        </div>
        
        <div class="flex gap-3 mt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-3 px-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
          >
            Procesar Devolución
          </button>
          <button
            type="button"
            onclick="document.getElementById('modal-procesar').classList.add('hidden')"
            class="px-6 bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-3 rounded-xl transition-all duration-200"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function actualizarInfoDevolucion() {
      const select = document.getElementById('select-detalle');
      const selectedOption = select.options[select.selectedIndex];
      const infoDiv = document.getElementById('info-devolucion');
      const cantidadInput = document.getElementById('input-cantidad');
      
      if (selectedOption.value) {
        document.getElementById('info-pedido').textContent = '#' + selectedOption.getAttribute('data-pedido');
        document.getElementById('info-cliente').textContent = selectedOption.getAttribute('data-cliente');
        const producto = selectedOption.getAttribute('data-producto');
        const sku = selectedOption.getAttribute('data-sku');
        document.getElementById('info-producto').textContent = `${producto} (SKU: ${sku})`;
        
        const cantidadMax = selectedOption.getAttribute('data-cantidad');
        document.getElementById('info-cantidad-max').textContent = cantidadMax;
        
        cantidadInput.max = cantidadMax;
        cantidadInput.value = '';
        
        infoDiv.classList.remove('hidden');
        document.getElementById('monto-reembolso-container').classList.add('hidden');
      } else {
        infoDiv.classList.add('hidden');
        document.getElementById('monto-reembolso-container').classList.add('hidden');
        cantidadInput.value = '';
      }
    }

    function calcularReembolso() {
      const select = document.getElementById('select-detalle');
      const selectedOption = select.options[select.selectedIndex];
      const cantidadInput = document.getElementById('input-cantidad');
      const montoContainer = document.getElementById('monto-reembolso-container');
      const montoSpan = document.getElementById('monto-reembolso');
      
      if (selectedOption.value && cantidadInput.value) {
        const cantidad = parseInt(cantidadInput.value);
        const precio = parseFloat(selectedOption.getAttribute('data-precio'));
        const monto = cantidad * precio;
        
        montoSpan.textContent = '$' + monto.toFixed(2);
        montoContainer.classList.remove('hidden');
      } else {
        montoContainer.classList.add('hidden');
      }
    }

    // Cerrar modal con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-procesar').classList.add('hidden');
      }
    });

    // Cerrar modal al hacer clic fuera
    const modal = document.getElementById('modal-procesar');
    if (modal) {
      modal.addEventListener('click', (e) => {
        if (e.target.id === 'modal-procesar') {
          e.target.classList.add('hidden');
        }
      });
    }
  </script>
</Layout>
