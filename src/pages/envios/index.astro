---
import Icon from '../../components/Icon.astro';
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

let envios: any[] = [];
let pedidosSinEnvio: any[] = [];
let error = '';

const url = new URL(Astro.request.url);
const urlError = url.searchParams.get('error');
if (urlError) {
  error = decodeURIComponent(urlError);
}

try {
  const resultEnvios = await query(`
    SELECT
      e.envio_id,
      e.pedido_id,
      e.fecha_envio,
      e.transportista,
      e.numero_tracking,
      e.estado_envio,
      e.fecha_creacion,
      p.cliente_id,
      p.total_pedido,
      c.nombre,
      c.apellido,
      c.email
    FROM envios e
    INNER JOIN pedidos p ON e.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    ORDER BY e.envio_id DESC
  `);
  envios = resultEnvios.rows;

  const resultPedidos = await query(`
    SELECT
      p.pedido_id,
      p.total_pedido,
      c.nombre,
      c.apellido,
      c.email
    FROM pedidos p
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    LEFT JOIN envios e ON p.pedido_id = e.pedido_id
    WHERE e.envio_id IS NULL
      AND p.estado_pedido IN ('pagado', 'enviado')
    ORDER BY p.pedido_id DESC
  `);
  pedidosSinEnvio = resultPedidos.rows;

} catch (err) {
  error = 'Error al cargar envíos: ' + (err as Error).message;
  console.error(err);
}

const enPreparacion = envios.filter(e => e.estado_envio === 'en_preparacion').length;
const enTransito = envios.filter(e => e.estado_envio === 'en_transito').length;
const entregados = envios.filter(e => e.estado_envio === 'entregado').length;
const fallidos = envios.filter(e => e.estado_envio === 'fallido').length;
---

<Layout title="Envíos">
  <div class="container">
    <div class="content-wrapper">

      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="page-title">
              <Icon name="truck" size={40} /> Envíos
            </h1>
            <p class="mt-2" style="color: var(--text-secondary);">Gestiona los envíos de tus pedidos</p>
          </div>
          {pedidosSinEnvio.length > 0 && (
            <button
              onclick="document.getElementById('modal-crear').classList.remove('hidden')"
              class="btn-primary"
            >
              <Icon name="plus" size={20} />
              Crear Envío
            </button>
          )}
        </div>
      </div>

      {error && (
        <div class="mb-6 border-l-4 p-4 rounded-lg" style="background-color: rgba(220, 38, 38, 0.1); border-color: var(--accent-red);">
          <div class="flex items-center gap-2">
            <Icon name="x-circle" size={20} />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">En Preparación</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{enPreparacion}</p>
            </div>
            <div style="color: var(--accent-orange);">
              <Icon name="cube" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">En Tránsito</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{enTransito}</p>
            </div>
            <div style="color: var(--accent-blue);">
              <Icon name="truck" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Entregados</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{entregados}</p>
            </div>
            <div style="color: var(--accent-green);">
              <Icon name="check-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Fallidos</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{fallidos}</p>
            </div>
            <div style="color: var(--accent-red);">
              <Icon name="exclamation-circle" size={32} />
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Envíos -->
      <div class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="border-b" style="background-color: var(--bg-tertiary); border-color: var(--border-color);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Envío #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Pedido #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Transportista</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Tracking</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Estado</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Fecha Envío</th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y" style="border-color: var(--border-color);">
              {envios.map((envio) => (
                <tr class="transition-colors duration-150" style="background-color: var(--bg-secondary);" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor='var(--bg-secondary)'">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="shrink-0 h-10 w-10 rounded-full flex items-center justify-center" style="background-color: var(--accent-orange);">
                        <span class="text-white font-bold text-sm">#{envio.envio_id}</span>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm font-semibold" style="color: var(--text-primary);">Pedido #{envio.pedido_id}</span>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-bold" style="color: var(--text-primary);">{envio.nombre} {envio.apellido}</div>
                      <div class="text-xs" style="color: var(--text-secondary);">{envio.email}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm" style="color: var(--text-secondary);">
                    {envio.transportista || '-'}
                  </td>
                  <td class="px-6 py-4">
                    {envio.numero_tracking ? (
                      <span class="text-sm font-mono px-2 py-1 rounded" style="background-color: var(--bg-tertiary); color: var(--text-secondary);">{envio.numero_tracking}</span>
                    ) : (
                      <span style="color: var(--text-tertiary);">-</span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-bold rounded-full ${
                      envio.estado_envio === 'entregado' ? 'bg-green-500/10' :
                      envio.estado_envio === 'en_transito' ? 'bg-blue-500/10' :
                      envio.estado_envio === 'fallido' ? 'bg-red-500/10' :
                      'bg-orange-500/10'
                    }`} style={`color: ${envio.estado_envio === 'entregado' ? 'var(--accent-green)' : envio.estado_envio === 'en_transito' ? 'var(--accent-blue)' : envio.estado_envio === 'fallido' ? 'var(--accent-red)' : 'var(--accent-orange)'}`}>
                      <Icon name={envio.estado_envio === 'entregado' ? 'check-circle' : envio.estado_envio === 'en_transito' ? 'truck' : envio.estado_envio === 'fallido' ? 'exclamation-circle' : 'cube'} size={14} />
                      {envio.estado_envio.replace('_', ' ')}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center text-sm" style="color: var(--text-secondary);">
                    {envio.fecha_envio ? new Date(envio.fecha_envio).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric'
                    }) : '-'}
                  </td>
                  <td class="px-6 py-4 text-right">
                    {(envio.estado_envio === 'entregado' || envio.estado_envio === 'fallido') ? (
                      <button
                        disabled
                        class="p-2 rounded-lg cursor-not-allowed opacity-40"
                        style="color: var(--text-tertiary);"
                        title={envio.estado_envio === 'entregado' ? 'No se puede modificar un envío entregado' : 'Envío fallido (pedido cancelado)'}
                      >
                        <Icon name="lock-closed" size={18} />
                      </button>
                    ) : (
                      <button
                        onclick={`actualizarEstado(${JSON.stringify(envio)})`}
                        class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-blue);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Actualizar Estado"
                      >
                        <Icon name="arrow-path" size={18} />
                      </button>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear Envío -->
  <div id="modal-crear" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-2xl w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="truck" size={28} />
            Crear Nuevo Envío
          </h3>
        </div>

        <form action="/api/envios" method="POST" class="p-6">
          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Pedido <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="pedido_id"
                required
                class="input"
              >
                <option value="">Seleccionar pedido...</option>
                {pedidosSinEnvio.map((pedido) => (
                  <option value={pedido.pedido_id}>
                    Pedido #{pedido.pedido_id} - {pedido.nombre} {pedido.apellido} (${pedido.total_pedido})
                  </option>
                ))}
              </select>
              {pedidosSinEnvio.length === 0 && (
                <p class="mt-2 text-sm" style="color: var(--text-secondary);">No hay pedidos pendientes de envío</p>
              )}
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Transportista
              </label>
              <input
                type="text"
                name="transportista"
                placeholder="Ej: DHL, FedEx, UPS"
                class="input"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Número de Tracking
              </label>
              <input
                type="text"
                name="numero_tracking"
                placeholder="Código de seguimiento"
                class="input"
              />
            </div>

            <div class="border-l-4 p-3 rounded" style="background-color: var(--bg-tertiary); border-color: var(--accent-blue);">
              <p class="text-sm flex items-start gap-2" style="color: var(--text-secondary);">
                <Icon name="information-circle" size={16} />
                El envío se creará en estado "En Preparación"
              </p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="btn-primary flex-1"
            >
              Crear Envío
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-crear').classList.add('hidden')"
              class="btn-secondary px-6"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Actualizar Estado -->
  <div id="modal-actualizar" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-2xl w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="arrow-path" size={28} />
            Actualizar Estado de Envío
          </h3>
        </div>

        <form action="/api/envios" method="POST" class="p-6">
          <input type="hidden" name="_method" value="PATCH" />
          <input type="hidden" name="envio_id" id="update-envio-id" />

          <div class="space-y-5">
            <div class="p-4 rounded-xl" style="background-color: var(--bg-tertiary);">
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Envío #</strong> <span id="update-envio-numero"></span></p>
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Pedido #</strong> <span id="update-pedido-numero"></span></p>
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Cliente:</strong> <span id="update-cliente-nombre"></span></p>
              <p class="text-sm" style="color: var(--text-secondary);"><strong>Estado actual:</strong> <span id="update-estado-actual" class="font-semibold"></span></p>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Nuevo Estado <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="estado_envio"
                id="update-estado"
                required
                class="input"
              >
                <option value="en_preparacion">En Preparación</option>
                <option value="en_transito">En Tránsito</option>
                <option value="entregado">Entregado</option>
                <option value="fallido">Fallido</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Transportista
              </label>
              <input
                type="text"
                name="transportista"
                id="update-transportista"
                placeholder="Ej: DHL, FedEx, UPS"
                class="input"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Número de Tracking
              </label>
              <input
                type="text"
                name="numero_tracking"
                id="update-tracking"
                placeholder="Código de seguimiento"
                class="input"
              />
            </div>

            <div class="border-l-4 p-3 rounded" style="background-color: var(--bg-tertiary); border-color: var(--accent-blue);">
              <p class="text-sm flex items-start gap-2" style="color: var(--text-secondary);">
                <Icon name="information-circle" size={16} />
                <span><strong>Flujo requerido:</strong> En Preparación → En Tránsito → Entregado</span>
              </p>
              <p class="text-xs mt-1" style="color: var(--text-secondary);">
                • Al cambiar a "En Tránsito" se registra la fecha de envío (necesaria para devoluciones)<br/>
                • Solo después de "En Tránsito" puedes marcar como "Entregado"
            </p>
          </div>
        </div>

        <div class="flex gap-3 mt-6">
          <button
            type="submit"
            class="btn-primary flex-1"
          >
            Actualizar Estado
          </button>
          <button
            type="button"
            onclick="document.getElementById('modal-actualizar').classList.add('hidden')"
            class="btn-secondary px-6"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function actualizarEstado(envio) {
      document.getElementById('update-envio-id').value = envio.envio_id;
      document.getElementById('update-envio-numero').textContent = envio.envio_id;
      document.getElementById('update-pedido-numero').textContent = envio.pedido_id;
      document.getElementById('update-cliente-nombre').textContent = `${envio.nombre} ${envio.apellido}`;

      const estadoActualSpan = document.getElementById('update-estado-actual');
      estadoActualSpan.textContent = envio.estado_envio.replace('_', ' ');
      estadoActualSpan.className = 'font-semibold ' + (
        envio.estado_envio === 'entregado' ? 'text-green-600' :
        envio.estado_envio === 'en_transito' ? 'text-blue-600' :
        envio.estado_envio === 'fallido' ? 'text-red-600' :
        'text-orange-600'
      );

      document.getElementById('update-estado').value = envio.estado_envio;
      document.getElementById('update-transportista').value = envio.transportista || '';
      document.getElementById('update-tracking').value = envio.numero_tracking || '';

      const selectEstado = document.getElementById('update-estado');
      const optionEntregado = selectEstado.querySelector('option[value="entregado"]');

      if (envio.estado_envio !== 'en_transito') {
        optionEntregado.disabled = true;
        optionEntregado.textContent = 'Entregado (primero debe estar en tránsito)';
        optionEntregado.style.color = '#94a3b8';
      } else {
        optionEntregado.disabled = false;
        optionEntregado.textContent = 'Entregado';
        optionEntregado.style.color = '';
      }

      if (envio.estado_envio === 'entregado') {
        selectEstado.disabled = true;
        document.getElementById('update-transportista').disabled = true;
        document.getElementById('update-tracking').disabled = true;
        alert('⚠️ No se puede modificar un envío ya entregado');
      } else if (envio.estado_envio === 'fallido') {
        selectEstado.disabled = true;
        document.getElementById('update-transportista').disabled = true;
        document.getElementById('update-tracking').disabled = true;
        alert('⚠️ Este envío está marcado como fallido porque el pedido fue cancelado');
      } else {
        selectEstado.disabled = false;
        document.getElementById('update-transportista').disabled = false;
        document.getElementById('update-tracking').disabled = false;
      }

      document.getElementById('modal-actualizar').classList.remove('hidden');
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-crear').classList.add('hidden');
        document.getElementById('modal-actualizar').classList.add('hidden');
      }
    });

    ['modal-crear', 'modal-actualizar'].forEach(modalId => {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.addEventListener('click', (e) => {
          if (e.target.id === modalId) {
            e.target.classList.add('hidden');
          }
        });
      }
    });
  </script>
</Layout>
