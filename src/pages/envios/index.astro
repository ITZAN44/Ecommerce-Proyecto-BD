---
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

let envios: any[] = [];
let pedidosSinEnvio: any[] = [];
let error = '';

// Capturar error de la URL
const url = new URL(Astro.request.url);
const urlError = url.searchParams.get('error');
if (urlError) {
  error = decodeURIComponent(urlError);
}

try {
  // Obtener env√≠os con informaci√≥n del pedido y cliente
  const resultEnvios = await query(`
    SELECT 
      e.envio_id,
      e.pedido_id,
      e.fecha_envio,
      e.transportista,
      e.numero_tracking,
      e.estado_envio,
      e.fecha_creacion,
      p.cliente_id,
      p.total_pedido,
      c.nombre,
      c.apellido,
      c.email
    FROM envios e
    INNER JOIN pedidos p ON e.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    ORDER BY e.envio_id DESC
  `);
  envios = resultEnvios.rows;

  // Obtener pedidos pagados sin env√≠o
  const resultPedidos = await query(`
    SELECT 
      p.pedido_id,
      p.total_pedido,
      c.nombre,
      c.apellido,
      c.email
    FROM pedidos p
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    LEFT JOIN envios e ON p.pedido_id = e.pedido_id
    WHERE e.envio_id IS NULL 
      AND p.estado_pedido IN ('pagado', 'enviado')
    ORDER BY p.pedido_id DESC
  `);
  pedidosSinEnvio = resultPedidos.rows;

} catch (err) {
  error = 'Error al cargar env√≠os: ' + (err as Error).message;
  console.error(err);
}

const enPreparacion = envios.filter(e => e.estado_envio === 'en_preparacion').length;
const enTransito = envios.filter(e => e.estado_envio === 'en_transito').length;
const entregados = envios.filter(e => e.estado_envio === 'entregado').length;
const fallidos = envios.filter(e => e.estado_envio === 'fallido').length;
---

<Layout title="Env√≠os">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-orange-50 to-slate-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-orange-600 to-red-600 bg-clip-text text-transparent flex items-center gap-3">
              <span class="text-4xl">üöö</span> Env√≠os
            </h1>
            <p class="mt-2 text-slate-600">Gestiona los env√≠os de tus pedidos</p>
          </div>
          {pedidosSinEnvio.length > 0 && (
            <button
              onclick="document.getElementById('modal-crear').classList.remove('hidden')"
              class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Crear Env√≠o
            </button>
          )}
        </div>
      </div>

      {error && (
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <p class="text-red-700 font-medium">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-gradient-to-br from-orange-600 to-red-600 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-orange-100 text-sm font-medium">En Preparaci√≥n</p>
              <p class="text-4xl font-bold mt-2">{enPreparacion}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-100 text-sm font-medium">En Tr√°nsito</p>
              <p class="text-4xl font-bold mt-2">{enTransito}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-100 text-sm font-medium">Entregados</p>
              <p class="text-4xl font-bold mt-2">{entregados}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-red-600 to-red-700 rounded-2xl p-6 text-white shadow-xl transform hover:scale-105 transition-all duration-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-red-100 text-sm font-medium">Fallidos</p>
              <p class="text-4xl font-bold mt-2">{fallidos}</p>
            </div>
            <div class="bg-white/20 p-4 rounded-xl backdrop-blur-sm">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Env√≠os -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-200">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-gradient-to-r from-slate-50 to-slate-100">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Env√≠o #</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Pedido #</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Transportista</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Tracking</th>
                <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">Fecha Env√≠o</th>
                <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              {envios.map((envio) => (
                <tr class="hover:bg-slate-50 transition-colors duration-150">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="shrink-0 h-10 w-10 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center shadow-md">
                        <span class="text-white font-bold text-sm">#{envio.envio_id}</span>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm font-semibold text-slate-900">Pedido #{envio.pedido_id}</span>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-bold text-slate-900">{envio.nombre} {envio.apellido}</div>
                      <div class="text-xs text-slate-500">{envio.email}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-700">
                    {envio.transportista || '-'}
                  </td>
                  <td class="px-6 py-4">
                    {envio.numero_tracking ? (
                      <span class="text-sm font-mono bg-slate-100 px-2 py-1 rounded">{envio.numero_tracking}</span>
                    ) : (
                      <span class="text-slate-400">-</span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex px-3 py-1 text-xs font-bold rounded-full ${
                      envio.estado_envio === 'entregado' ? 'bg-green-100 text-green-800' :
                      envio.estado_envio === 'en_transito' ? 'bg-blue-100 text-blue-800' :
                      envio.estado_envio === 'fallido' ? 'bg-red-100 text-red-800' :
                      'bg-orange-100 text-orange-800'
                    }`}>
                      {envio.estado_envio.replace('_', ' ')}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center text-sm text-slate-600">
                    {envio.fecha_envio ? new Date(envio.fecha_envio).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric'
                    }) : '-'}
                  </td>
                  <td class="px-6 py-4 text-right">
                    {(envio.estado_envio === 'entregado' || envio.estado_envio === 'fallido') ? (
                      <button
                        disabled
                        class="text-slate-400 cursor-not-allowed p-2 rounded-lg"
                        title={envio.estado_envio === 'entregado' ? 'No se puede modificar un env√≠o entregado' : 'Env√≠o fallido (pedido cancelado)'}
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                      </button>
                    ) : (
                      <button
                        onclick={`actualizarEstado(${JSON.stringify(envio)})`}
                        class="text-blue-600 hover:text-blue-800 font-semibold hover:bg-blue-50 p-2 rounded-lg transition-colors"
                        title="Actualizar Estado"
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                      </button>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear Env√≠o -->
  <div id="modal-crear" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative bg-white rounded-2xl shadow-2xl max-w-2xl w-full animate-slideIn">
      <div class="bg-gradient-to-r from-orange-600 to-red-600 rounded-t-2xl px-6 py-5">
        <h3 class="text-2xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Crear Nuevo Env√≠o
        </h3>
      </div>
      
      <form action="/api/envios" method="POST" class="p-6">
        <div class="space-y-5">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Pedido <span class="text-red-500">*</span>
            </label>
            <select
              name="pedido_id"
              required
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200 outline-none"
            >
              <option value="">Seleccionar pedido...</option>
              {pedidosSinEnvio.map((pedido) => (
                <option value={pedido.pedido_id}>
                  Pedido #{pedido.pedido_id} - {pedido.nombre} {pedido.apellido} (${pedido.total_pedido})
                </option>
              ))}
            </select>
            {pedidosSinEnvio.length === 0 && (
              <p class="mt-2 text-sm text-slate-500">No hay pedidos pendientes de env√≠o</p>
            )}
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Transportista
            </label>
            <input
              type="text"
              name="transportista"
              placeholder="Ej: DHL, FedEx, UPS"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              N√∫mero de Tracking
            </label>
            <input
              type="text"
              name="numero_tracking"
              placeholder="C√≥digo de seguimiento"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>

          <div class="bg-blue-50 border-l-4 border-blue-500 p-3 rounded">
            <p class="text-sm text-blue-800">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              El env√≠o se crear√° en estado "En Preparaci√≥n"
            </p>
          </div>
        </div>
        
        <div class="flex gap-3 mt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white font-semibold py-3 px-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
          >
            Crear Env√≠o
          </button>
          <button
            type="button"
            onclick="document.getElementById('modal-crear').classList.add('hidden')"
            class="px-6 bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-3 rounded-xl transition-all duration-200"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Actualizar Estado -->
  <div id="modal-actualizar" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative bg-white rounded-2xl shadow-2xl max-w-2xl w-full animate-slideIn">
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-t-2xl px-6 py-5">
        <h3 class="text-2xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Actualizar Estado de Env√≠o
        </h3>
      </div>
      
      <form action="/api/envios" method="POST" class="p-6">
        <input type="hidden" name="_method" value="PATCH" />
        <input type="hidden" name="envio_id" id="update-envio-id" />
        
        <div class="space-y-5">
          <div class="bg-slate-50 p-4 rounded-xl">
            <p class="text-sm text-slate-600"><strong>Env√≠o #</strong> <span id="update-envio-numero"></span></p>
            <p class="text-sm text-slate-600"><strong>Pedido #</strong> <span id="update-pedido-numero"></span></p>
            <p class="text-sm text-slate-600"><strong>Cliente:</strong> <span id="update-cliente-nombre"></span></p>
            <p class="text-sm text-slate-600"><strong>Estado actual:</strong> <span id="update-estado-actual" class="font-semibold"></span></p>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Nuevo Estado <span class="text-red-500">*</span>
            </label>
            <select
              name="estado_envio"
              id="update-estado"
              required
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
            >
              <option value="en_preparacion">En Preparaci√≥n</option>
              <option value="en_transito">En Tr√°nsito</option>
              <option value="entregado">Entregado</option>
              <option value="fallido">Fallido</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              Transportista
            </label>
            <input
              type="text"
              name="transportista"
              id="update-transportista"
              placeholder="Ej: DHL, FedEx, UPS"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">
              N√∫mero de Tracking
            </label>
            <input
              type="text"
              name="numero_tracking"
              id="update-tracking"
              placeholder="C√≥digo de seguimiento"
              class="w-full px-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 outline-none"
            />
          </div>

          <div class="bg-blue-50 border-l-4 border-blue-500 p-3 rounded">
            <p class="text-sm text-blue-800">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <strong>Flujo requerido:</strong> En Preparaci√≥n ‚Üí En Tr√°nsito ‚Üí Entregado
            </p>
            <p class="text-xs text-blue-700 mt-1">
              ‚Ä¢ Al cambiar a "En Tr√°nsito" se registra la fecha de env√≠o (necesaria para devoluciones)<br/>
              ‚Ä¢ Solo despu√©s de "En Tr√°nsito" puedes marcar como "Entregado"
            </p>
          </div>
        </div>
        
        <div class="flex gap-3 mt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
          >
            Actualizar Estado
          </button>
          <button
            type="button"
            onclick="document.getElementById('modal-actualizar').classList.add('hidden')"
            class="px-6 bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-3 rounded-xl transition-all duration-200"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function actualizarEstado(envio) {
      document.getElementById('update-envio-id').value = envio.envio_id;
      document.getElementById('update-envio-numero').textContent = envio.envio_id;
      document.getElementById('update-pedido-numero').textContent = envio.pedido_id;
      document.getElementById('update-cliente-nombre').textContent = `${envio.nombre} ${envio.apellido}`;
      
      // Mostrar estado actual con formato
      const estadoActualSpan = document.getElementById('update-estado-actual');
      estadoActualSpan.textContent = envio.estado_envio.replace('_', ' ');
      estadoActualSpan.className = 'font-semibold ' + (
        envio.estado_envio === 'entregado' ? 'text-green-600' :
        envio.estado_envio === 'en_transito' ? 'text-blue-600' :
        envio.estado_envio === 'fallido' ? 'text-red-600' :
        'text-orange-600'
      );
      
      document.getElementById('update-estado').value = envio.estado_envio;
      document.getElementById('update-transportista').value = envio.transportista || '';
      document.getElementById('update-tracking').value = envio.numero_tracking || '';
      
      // Validar transiciones de estado
      const selectEstado = document.getElementById('update-estado');
      const optionEntregado = selectEstado.querySelector('option[value="entregado"]');
      
      // Solo permitir "entregado" si el estado actual es "en_transito"
      if (envio.estado_envio !== 'en_transito') {
        optionEntregado.disabled = true;
        optionEntregado.textContent = 'Entregado (primero debe estar en tr√°nsito)';
        optionEntregado.style.color = '#94a3b8';
      } else {
        optionEntregado.disabled = false;
        optionEntregado.textContent = 'Entregado';
        optionEntregado.style.color = '';
      }
      
      // Deshabilitar edici√≥n si ya est√° entregado o fallido
      if (envio.estado_envio === 'entregado') {
        selectEstado.disabled = true;
        document.getElementById('update-transportista').disabled = true;
        document.getElementById('update-tracking').disabled = true;
        alert('‚ö†Ô∏è No se puede modificar un env√≠o ya entregado');
      } else if (envio.estado_envio === 'fallido') {
        selectEstado.disabled = true;
        document.getElementById('update-transportista').disabled = true;
        document.getElementById('update-tracking').disabled = true;
        alert('‚ö†Ô∏è Este env√≠o est√° marcado como fallido porque el pedido fue cancelado');
      } else {
        selectEstado.disabled = false;
        document.getElementById('update-transportista').disabled = false;
        document.getElementById('update-tracking').disabled = false;
      }
      
      document.getElementById('modal-actualizar').classList.remove('hidden');
    }

    // Cerrar modales con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-crear').classList.add('hidden');
        document.getElementById('modal-actualizar').classList.add('hidden');
      }
    });

    // Cerrar modales al hacer clic fuera
    ['modal-crear', 'modal-actualizar'].forEach(modalId => {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.addEventListener('click', (e) => {
          if (e.target.id === modalId) {
            e.target.classList.add('hidden');
          }
        });
      }
    });
  </script>
