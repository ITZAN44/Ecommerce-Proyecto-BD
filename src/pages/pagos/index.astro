---
import Icon from '../../components/Icon.astro';
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

let pagos: any[] = [];
let pedidosPendientes: any[] = [];
let error = '';

const url = new URL(Astro.request.url);
const urlError = url.searchParams.get('error');
if (urlError) {
  error = decodeURIComponent(urlError);
}

try {
  const resultPagos = await query(`
    SELECT
      pa.pago_id,
      pa.pedido_id,
      pa.fecha_pago,
      pa.monto,
      pa.metodo_pago,
      pa.estado_pago,
      pa.id_transaccion_externa,
      p.total_pedido,
      p.estado_pedido,
      c.nombre,
      c.apellido,
      c.email
    FROM pagos pa
    INNER JOIN pedidos p ON pa.pedido_id = p.pedido_id
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    ORDER BY pa.pago_id DESC
  `);
  pagos = resultPagos.rows;

  const resultPedidos = await query(`
    SELECT
      p.pedido_id,
      p.total_pedido,
      p.fecha_pedido,
      c.nombre,
      c.apellido,
      c.email
    FROM pedidos p
    INNER JOIN clientes c ON p.cliente_id = c.cliente_id
    WHERE p.estado_pedido = 'pendiente'
    ORDER BY p.pedido_id DESC
  `);
  pedidosPendientes = resultPedidos.rows;

} catch (err) {
  error = 'Error al cargar pagos: ' + (err as Error).message;
  console.error(err);
}

const exitosos = pagos.filter(p => p.estado_pago === 'exitoso').length;
const fallidos = pagos.filter(p => p.estado_pago === 'fallido').length;
const pendientes = pagos.filter(p => p.estado_pago === 'pendiente').length;
const reembolsados = pagos.filter(p => p.estado_pago === 'reembolsado').length;
const totalMonto = pagos.filter(p => p.estado_pago === 'exitoso').reduce((sum, p) => sum + parseFloat(p.monto), 0);
---

<Layout title="Pagos">
  <div class="container">
    <div class="content-wrapper">

      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="page-title">
              <Icon name="credit-card" size={40} /> Pagos
            </h1>
            <p class="mt-2" style="color: var(--text-secondary);">Gestiona los pagos de los pedidos</p>
          </div>
          <button
            onclick="document.getElementById('modal-procesar').classList.remove('hidden')"
            class="btn-primary"
          >
            <Icon name="plus" size={20} />
            Procesar Pago
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 border-l-4 p-4 rounded-lg" style="background-color: rgba(220, 38, 38, 0.1); border-color: var(--accent-red);">
          <div class="flex items-center gap-2">
            <Icon name="x-circle" size={20} />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Exitosos</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{exitosos}</p>
            </div>
            <div style="color: var(--accent-green);">
              <Icon name="check-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Pendientes</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{pendientes}</p>
            </div>
            <div style="color: var(--accent-yellow);">
              <Icon name="clock" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Fallidos</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{fallidos}</p>
            </div>
            <div style="color: var(--accent-red);">
              <Icon name="x-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Reembolsados</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-primary);">{reembolsados}</p>
            </div>
            <div style="color: var(--accent-purple);">
              <Icon name="arrow-uturn-left" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-secondary);">Total Recaudado</p>
              <p class="text-3xl font-bold mt-2" style="color: var(--text-primary);">${totalMonto.toFixed(2)}</p>
            </div>
            <div style="color: var(--accent-blue);">
              <Icon name="currency-dollar" size={32} />
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Pagos -->
      <div class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="border-b" style="background-color: var(--bg-tertiary); border-color: var(--border-color);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Pago #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Pedido #</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Cliente</th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Monto</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Método</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Estado</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Fecha</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">ID Transacción</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y" style="border-color: var(--border-color);">
              {pagos.map((pago) => (
                <tr class="transition-colors duration-150" style="background-color: var(--bg-secondary);" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor='var(--bg-secondary)'">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="shrink-0 h-10 w-10 rounded-full flex items-center justify-center" style="background-color: var(--accent-green);">
                        <span class="text-white font-bold text-sm">#{pago.pago_id}</span>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm font-semibold" style="color: var(--text-primary);">Pedido #{pago.pedido_id}</span>
                  </td>
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-bold" style="color: var(--text-primary);">{pago.nombre} {pago.apellido}</div>
                      <div class="text-xs" style="color: var(--text-secondary);">{pago.email}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <span class="text-lg font-bold" style="color: var(--accent-green);">${parseFloat(pago.monto).toFixed(2)}</span>
                  </td>
                  <td class="px-6 py-4 text-sm capitalize" style="color: var(--text-secondary);">
                    {pago.metodo_pago || '-'}
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-bold rounded-full ${
                      pago.estado_pago === 'exitoso' ? 'bg-green-500/10' :
                      pago.estado_pago === 'pendiente' ? 'bg-yellow-500/10' :
                      pago.estado_pago === 'reembolsado' ? 'bg-purple-500/10' :
                      'bg-red-500/10'
                    }`} style={`color: ${pago.estado_pago === 'exitoso' ? 'var(--accent-green)' : pago.estado_pago === 'pendiente' ? 'var(--accent-yellow)' : pago.estado_pago === 'reembolsado' ? 'var(--accent-purple)' : 'var(--accent-red)'}`}>
                      <Icon name={pago.estado_pago === 'exitoso' ? 'check-circle' : pago.estado_pago === 'pendiente' ? 'clock' : pago.estado_pago === 'reembolsado' ? 'arrow-uturn-left' : 'x-circle'} size={14} />
                      {pago.estado_pago}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center text-sm" style="color: var(--text-secondary);">
                    {new Date(pago.fecha_pago).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    })}
                  </td>
                  <td class="px-6 py-4">
                    {pago.id_transaccion_externa ? (
                      <span class="text-xs font-mono px-2 py-1 rounded" style="background-color: var(--bg-tertiary); color: var(--text-secondary);">{pago.id_transaccion_externa}</span>
                    ) : (
                      <span style="color: var(--text-tertiary);">-</span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-center">
                    {['fallido', 'pendiente'].includes(pago.estado_pago) && (
                      <button
                        onclick={`eliminarPago(${pago.pago_id}, '${pago.estado_pago}')`}
                        class="btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-red);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Eliminar Permanentemente"
                      >
                        <Icon name="trash" size={18} />
                      </button>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Procesar Pago -->
  <div id="modal-procesar" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="fixed inset-0" style="background-color: rgba(0, 0, 0, 0.8);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="relative z-10 rounded-2xl shadow-2xl max-w-2xl w-full animate-slideIn" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 border-b" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="credit-card" size={28} />
            Procesar Pago
          </h3>
        </div>

        <form action="/api/pagos" method="POST" class="p-6">
          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Pedido Pendiente <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="pedido_id"
                id="select-pedido"
                required
                onchange="actualizarMonto()"
                class="input"
              >
                <option value="">Seleccionar pedido...</option>
                {pedidosPendientes.map((pedido) => (
                  <option value={pedido.pedido_id} data-monto={pedido.total_pedido}>
                    Pedido #{pedido.pedido_id} - {pedido.nombre} {pedido.apellido} - ${parseFloat(pedido.total_pedido).toFixed(2)}
                  </option>
                ))}
              </select>
              {pedidosPendientes.length === 0 && (
                <p class="mt-2 text-sm" style="color: var(--text-secondary);">No hay pedidos pendientes de pago</p>
              )}
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Monto <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="number"
                step="0.01"
                name="monto"
                id="input-monto"
                required
                readonly
                class="input font-bold text-lg"
                style="opacity: 0.7;"
                placeholder="0.00"
              />
              <p class="mt-1 text-xs" style="color: var(--text-secondary);">El monto se ajusta automáticamente según el pedido seleccionado</p>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Método de Pago <span style="color: var(--accent-red);">*</span>
              </label>
              <select
                name="metodo_pago"
                required
                class="input"
              >
                <option value="">Seleccionar método...</option>
                <option value="tarjeta_credito">Tarjeta de Crédito</option>
                <option value="tarjeta_debito">Tarjeta de Débito</option>
                <option value="paypal">PayPal</option>
                <option value="stripe">Stripe</option>
                <option value="transferencia">Transferencia Bancaria</option>
                <option value="efectivo">Efectivo</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                ID de Transacción Externa
              </label>
              <input
                type="text"
                name="id_transaccion_externa"
                placeholder="Ej: txn_1A2B3C4D5E6F (opcional)"
                class="input"
              />
              <p class="mt-1 text-xs" style="color: var(--text-secondary);">ID de Stripe, PayPal u otro procesador de pagos</p>
            </div>

            <div class="border-l-4 p-3 rounded" style="background-color: var(--bg-tertiary); border-color: var(--accent-green);">
              <p class="text-sm flex items-start gap-2" style="color: var(--text-secondary);">
                <Icon name="information-circle" size={16} />
                Al procesar el pago, el pedido pasará a estado "pagado" y se creará un envío automáticamente
              </p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="btn-primary flex-1"
            >
              Procesar Pago
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-procesar').classList.add('hidden')"
              class="btn-secondary px-6"
            >
              Cancelar
            </button>
          </div>
      </form>
    </div>
  </div>

  <script is:inline>
    function actualizarMonto() {
      const select = document.getElementById('select-pedido');
      const input = document.getElementById('input-monto');
      const selectedOption = select.options[select.selectedIndex];

      if (selectedOption.value) {
        const monto = selectedOption.getAttribute('data-monto');
        input.value = parseFloat(monto).toFixed(2);
      } else {
        input.value = '';
      }
    }

    async function eliminarPago(pagoId, estadoPago) {
      if (!confirm(`⚠️ ELIMINAR PAGO PERMANENTEMENTE\n\n¿Estás seguro de eliminar el pago #${pagoId}?\n\nEstado: ${estadoPago}\nEsta acción NO se puede deshacer.\n\nSOLO se pueden eliminar pagos fallidos o pendientes.`)) {
        return;
      }

      if (!confirm(`Confirma nuevamente: ¿Eliminar pago #${pagoId} de la base de datos?`)) {
        return;
      }

      try {
        const formData = new FormData();
        formData.append('_method', 'DELETE');
        formData.append('pago_id', pagoId);

        const response = await fetch('/api/pagos', {
          method: 'POST',
          body: formData
        });

        const url = new URL(response.url);
        const error = url.searchParams.get('error');

        if (error) {
          alert('❌ Error: ' + decodeURIComponent(error));
          location.href = '/pagos';
        } else if (response.redirected || response.ok) {
          alert('✅ Pago eliminado exitosamente');
          location.href = '/pagos';
        } else {
          alert('Error al eliminar el pago');
        }
      } catch (error) {
        console.error('Error al eliminar pago:', error);
        alert('Error al eliminar el pago');
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('modal-procesar').classList.add('hidden');
      }
    });

    const modal = document.getElementById('modal-procesar');
    if (modal) {
      modal.addEventListener('click', (e) => {
        if (e.target.id === 'modal-procesar') {
          e.target.classList.add('hidden');
        }
      });
    }
  </script>
</Layout>
