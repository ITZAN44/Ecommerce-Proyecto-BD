// Obtener estad√≠sticas b√°sicas
let stats = {
  totalProductos: 0,
  totalClientes: 0,
  totalPedidos: 0,
  totalCategorias: 0
};

try {
  const productosRes = await query('SELECT COUNT(*) as count FROM productos WHERE estado = $1', ['activo']);
  const clientesRes = await query('SELECT COUNT(*) as count FROM clientes WHERE estado = $1', ['activo']);
  const pedidosRes = await query('SELECT COUNT(*) as count FROM pedidos');
  const categoriasRes = await query('SELECT COUNT(*) as count FROM categorias WHERE estado = $1', ['activo']);
  
  stats = {
    totalProductos: parseInt(productosRes.rows[0].count),
    totalClientes: parseInt(clientesRes.rows[0].count),
    totalPedidos: parseInt(pedidosRes.rows[0].count),
    totalCategorias: parseInt(categoriasRes.rows[0].count)
  };
} catch (error) {
  console.error('Error al obtener estad√≠sticas:', error);
}
