---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icon.astro';
import { query } from '../../lib/db';
import type { Cliente } from '../../lib/types';

let clientes: Cliente[] = [];
let error = '';

try {
  const result = await query(`
    SELECT cliente_id, nombre, apellido, email, estado, fecha_creacion
    FROM clientes
    ORDER BY cliente_id DESC
  `);
  clientes = result.rows;
} catch (err) {
  error = 'Error al cargar clientes: ' + (err as Error).message;
  console.error(err);
}

const activos = clientes.filter(c => c.estado === 'activo').length;
const inactivos = clientes.filter(c => c.estado === 'inactivo').length;
const suspendidos = clientes.filter(c => c.estado === 'suspendido').length;
---

<Layout title="Clientes">
  <div class="min-h-screen py-8 px-4 sm:px-6 lg:px-8" style="background-color: var(--bg-primary);">
    <div class="max-w-7xl mx-auto">

      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-4xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
              <Icon name="users" size={40} style="color: var(--accent-blue);" />
              <span>Clientes</span>
            </h1>
            <p class="mt-2 text-base" style="color: var(--text-secondary);">Gestiona la información de tus clientes</p>
          </div>
          <button
            onclick="document.getElementById('modal-crear').classList.remove('hidden')"
            class="btn-primary inline-flex items-center gap-2"
          >
            <Icon name="plus" size={20} />
            <span>Nuevo Cliente</span>
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 p-4 rounded-lg" style="background-color: rgba(239, 68, 68, 0.1); border-left: 3px solid var(--accent-red);">
          <div class="flex items-center gap-3">
            <Icon name="exclamation-triangle" size={24} style="color: var(--accent-red);" />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium uppercase tracking-wide mb-2" style="color: var(--text-secondary);">Total Clientes</p>
              <p class="text-3xl font-bold" style="color: var(--text-primary);">{clientes.length}</p>
            </div>
            <div class="p-4 rounded-xl" style="background-color: rgba(59, 130, 246, 0.1);">
              <Icon name="users" size={32} style="color: var(--accent-blue);" />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium uppercase tracking-wide mb-2" style="color: var(--text-secondary);">Activos</p>
              <p class="text-3xl font-bold" style="color: var(--accent-green);">{activos}</p>
            </div>
            <div class="p-4 rounded-xl" style="background-color: rgba(16, 185, 129, 0.1);">
              <Icon name="check-circle" size={32} style="color: var(--accent-green);" />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium uppercase tracking-wide mb-2" style="color: var(--text-secondary);">Inactivos</p>
              <p class="text-3xl font-bold" style="color: var(--text-muted);">{inactivos}</p>
            </div>
            <div class="p-4 rounded-xl" style="background-color: rgba(107, 114, 128, 0.1);">
              <Icon name="x-circle" size={32} style="color: var(--text-muted);" />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium uppercase tracking-wide mb-2" style="color: var(--text-secondary);">Suspendidos</p>
              <p class="text-3xl font-bold" style="color: var(--accent-yellow);">{suspendidos}</p>
            </div>
            <div class="p-4 rounded-xl" style="background-color: rgba(245, 158, 11, 0.1);">
              <Icon name="exclamation-triangle" size={32} style="color: var(--accent-yellow);" />
            </div>
          </div>
        </div>
      </div>

      <!-- Tabla de Clientes -->
      <div class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y" style="border-color: var(--border-color);">
            <thead style="background-color: var(--bg-tertiary);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Email</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Estado</th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Fecha Registro</th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-primary);">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y" style="background-color: var(--bg-secondary); border-color: var(--border-color);">
              {clientes.map((cliente) => (
                <tr class="transition-colors duration-150" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor=''">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="shrink-0 h-12 w-12 rounded-full flex items-center justify-center shadow-md" style="background-color: var(--accent-blue);">
                        <span class="text-white font-bold text-lg">{cliente.nombre.charAt(0)}{cliente.apellido.charAt(0)}</span>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-bold" style="color: var(--text-primary);">{cliente.nombre} {cliente.apellido}</div>
                        <div class="text-xs" style="color: var(--text-muted);">ID: {cliente.cliente_id}</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm flex items-center gap-2" style="color: var(--text-secondary);">
                      <Icon name="mail" size={16} style="color: var(--text-muted);" />
                      {cliente.email}
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-bold rounded-full ${
                      cliente.estado === 'activo' ? 'bg-green-500/10 text-green-400 border border-green-500/30' :
                      cliente.estado === 'suspendido' ? 'bg-yellow-500/10 text-yellow-400 border border-yellow-500/30' :
                      'bg-gray-500/10 text-gray-400 border border-gray-500/30'
                    }`}>
                      <Icon name={cliente.estado === 'activo' ? 'check-circle' : cliente.estado === 'suspendido' ? 'exclamation-triangle' : 'x-circle'} size={14} />
                      {cliente.estado}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center text-sm" style="color: var(--text-secondary);">
                    {new Date(cliente.fecha_creacion).toLocaleDateString('es-ES', {
                      day: '2-digit',
                      month: 'short',
                      year: 'numeric'
                    })}
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex justify-end gap-2">
                      <button
                        onclick={`verDirecciones(${cliente.cliente_id}, '${cliente.nombre}', '${cliente.apellido}')`}
                        class="p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-blue);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Ver Direcciones"
                      >
                        <svg class="w-4 h-4" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                        </svg>
                      </button>
                      <button
                        onclick={`verificarPedidos(${cliente.cliente_id})`}
                        class="p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-purple);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Verificar Pedidos"
                      >
                        <svg class="w-4 h-4" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0 1 18 18.75h-2.25" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 13.5l1.5 1.5 3-3.75" />
                        </svg>
                      </button>
                      <button
                        onclick={`calcularPuntos(${cliente.cliente_id})`}
                        class="p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-yellow);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Puntos de Fidelidad"
                      >
                        <svg class="w-4 h-4" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                        </svg>
                      </button>
                      <button
                        onclick={`editar(${JSON.stringify(cliente)})`}
                        class="p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-blue);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Editar"
                      >
                        <Icon name="pencil" size={18} />
                      </button>
                      <button
                        onclick={`cambiarEstado(${cliente.cliente_id}, ${JSON.stringify(cliente.estado)})`}
                        class={`font-semibold p-2 rounded-lg transition-colors ${
                          cliente.estado === 'activo'
                            ? 'text-red-600 hover:text-red-800 hover:bg-red-50'
                            : cliente.estado === 'suspendido'
                            ? 'text-green-600 hover:text-green-800 hover:bg-green-50'
                            : 'text-green-600 hover:text-green-800 hover:bg-green-50'
                        }`}
                        title={cliente.estado === 'activo' ? 'Suspender/Inactivar' : 'Activar'}
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          {cliente.estado === 'activo' ? (
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                          ) : (
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          )}
                        </svg>
                      </button>
                      <button
                        onclick={`eliminarCliente(${cliente.cliente_id}, '${cliente.nombre} ${cliente.apellido}')`}
                        class="p-2 rounded-lg transition-all duration-200 hover:scale-110"
                        style="color: var(--accent-red);"
                        onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                        onmouseout="this.style.backgroundColor=''"
                        title="Eliminar Permanentemente"
                      >
                        <Icon name="trash" size={18} />
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear Cliente -->
  <div id="modal-crear" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
      <div class="fixed inset-0 transition-opacity" onclick="document.getElementById('modal-crear').classList.add('hidden')" style="background-color: rgba(0, 0, 0, 0.8);"></div>

      <div class="inline-block align-bottom rounded-2xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full animate-slideIn relative z-10" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5" style="background: linear-gradient(135deg, var(--accent-blue) 0%, var(--accent-purple) 100%);">
          <h3 class="text-2xl font-bold text-white flex items-center gap-3">
            <Icon name="user-plus" size={28} />
            Nuevo Cliente
          </h3>
        </div>

        <form action="/api/clientes" method="POST" class="p-6">
          <div class="space-y-5">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                  Nombre <span style="color: var(--accent-red);">*</span>
                </label>
                <input
                  type="text"
                  name="nombre"
                  required
                  placeholder="Juan"
                  class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                  style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                  onfocus="this.style.borderColor='var(--accent-blue)'"
                  onblur="this.style.borderColor='var(--border-color)'"
                />
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                  Apellido <span style="color: var(--accent-red);">*</span>
                </label>
                <input
                  type="text"
                  name="apellido"
                  required
                  placeholder="Pérez"
                  class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                  style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                  onfocus="this.style.borderColor='var(--accent-blue)'"
                  onblur="this.style.borderColor='var(--border-color)'"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Email <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="email"
                name="email"
                required
                placeholder="cliente@ejemplo.com"
                class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                onfocus="this.style.borderColor='var(--accent-blue)'"
                onblur="this.style.borderColor='var(--border-color)'"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Contraseña <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="password"
                name="contrasena"
                required
                placeholder="••••••••"
                minlength="6"
                class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                onfocus="this.style.borderColor='var(--accent-blue)'"
                onblur="this.style.borderColor='var(--border-color)'"
              />
              <p class="mt-1 text-xs" style="color: var(--text-muted);">Mínimo 6 caracteres</p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="btn-primary flex-1"
            >
              Crear Cliente
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-crear').classList.add('hidden')"
              class="btn-secondary px-6"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Editar Cliente -->
  <div id="modal-editar" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
      <div class="fixed inset-0 transition-opacity" onclick="document.getElementById('modal-editar').classList.add('hidden')" style="background-color: rgba(0, 0, 0, 0.8);"></div>

      <div class="inline-block align-bottom rounded-2xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full animate-slideIn relative z-10" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5" style="background: linear-gradient(135deg, var(--accent-blue) 0%, var(--accent-purple) 100%);">
          <h3 class="text-2xl font-bold text-white flex items-center gap-3">
            <Icon name="pencil" size={28} />
            Editar Cliente
          </h3>
        </div>

        <form action="/api/clientes" method="POST" class="p-6">
          <input type="hidden" name="_method" value="PUT" />
          <input type="hidden" name="cliente_id" id="edit-id" />

          <div class="space-y-5">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                  Nombre <span style="color: var(--accent-red);">*</span>
                </label>
                <input
                  type="text"
                  name="nombre"
                  id="edit-nombre"
                  required
                  class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                  style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                  onfocus="this.style.borderColor='var(--accent-blue)'"
                  onblur="this.style.borderColor='var(--border-color)'"
                />
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                  Apellido <span style="color: var(--accent-red);">*</span>
                </label>
                <input
                  type="text"
                  name="apellido"
                  id="edit-apellido"
                  required
                  class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                  style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                  onfocus="this.style.borderColor='var(--accent-blue)'"
                  onblur="this.style.borderColor='var(--border-color)'"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Email <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="email"
                name="email"
                id="edit-email"
                required
                class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                onfocus="this.style.borderColor='var(--accent-blue)'"
                onblur="this.style.borderColor='var(--border-color)'"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-primary);">
                Nueva Contraseña (Opcional)
              </label>
              <input
                type="password"
                name="contrasena"
                id="edit-contrasena"
                placeholder="Dejar vacío para mantener la actual"
                minlength="6"
                class="w-full px-4 py-3 rounded-xl transition-all duration-200 outline-none"
                style="background-color: var(--bg-tertiary); border: 2px solid var(--border-color); color: var(--text-primary);"
                onfocus="this.style.borderColor='var(--accent-blue)'"
                onblur="this.style.borderColor='var(--border-color)'"
              />
              <p class="mt-1 text-xs" style="color: var(--text-muted);">Solo llenar si deseas cambiar la contraseña</p>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button
              type="submit"
              class="btn-primary flex-1"
            >
              Guardar Cambios
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-editar').classList.add('hidden')"
              class="btn-secondary px-6"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Ver Direcciones del Cliente -->
  <div id="modal-direcciones" class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
      <div class="fixed inset-0 transition-opacity" onclick="document.getElementById('modal-direcciones').classList.add('hidden')" style="background-color: rgba(0, 0, 0, 0.8);"></div>

      <div class="inline-block align-bottom rounded-2xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-3xl sm:w-full animate-slideIn max-h-[90vh] overflow-y-auto relative z-10" style="background-color: var(--bg-secondary);">
        <div class="px-6 py-5 sticky top-0 z-10" style="background: linear-gradient(135deg, var(--accent-blue) 0%, var(--accent-purple) 100%);">
          <h3 class="text-2xl font-bold text-white flex items-center gap-3">
            <Icon name="map-pin" size={28} />
            Direcciones de <span id="modal-direcciones-cliente-nombre"></span>
          </h3>
        </div>

        <div class="p-6">
          <input type="hidden" id="modal-direcciones-cliente-id" />

          <!-- Direcciones existentes -->
          <div class="mb-6">
            <h4 class="text-lg font-bold mb-4" style="color: var(--text-primary);">Direcciones Registradas</h4>
            <div id="lista-direcciones" class="space-y-3">
              <!-- Se llenará dinámicamente con JavaScript -->
            </div>
          </div>

          <!-- Formulario agregar nueva dirección -->
          <div class="pt-6" style="border-top: 2px solid var(--border-color);">
