---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icon.astro';
import { query } from '../../lib/db';
import type { Categoria } from '../../lib/types';

let categorias: Categoria[] = [];
let error = '';

try {
  const result = await query('SELECT * FROM categorias ORDER BY categoria_id DESC');
  categorias = result.rows;
} catch (err) {
  error = 'Error al cargar categor√≠as: ' + (err as Error).message;
  console.error(err);
}

const activas = categorias.filter(c => c.estado === 'activo').length;
const inactivas = categorias.filter(c => c.estado === 'inactivo').length;
---

<Layout title="Categor√≠as">
  <div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-4xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
              <Icon name="tag" size={40} />
              Categor√≠as
            </h1>
            <p class="mt-2" style="color: var(--text-secondary);">Gestiona las categor√≠as de productos de tu tienda</p>
          </div>
          <button
            onclick="document.getElementById('modal-crear').classList.remove('hidden')"
            class="btn-primary"
          >
            <Icon name="plus" size={20} />
            Nueva Categor√≠a
          </button>
        </div>
      </div>

      {error && (
        <div class="mb-6 p-4 rounded-xl border-l-4" style="background-color: var(--bg-secondary); border-color: var(--accent-red);">
          <div class="flex items-center gap-2">
            <Icon name="x-circle" size={20} />
            <p class="font-medium" style="color: var(--accent-red);">{error}</p>
          </div>
        </div>
      )}

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Total</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--text-secondary);">{categorias.length}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="tag" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Activas</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--accent-green);">{activas}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="check-circle" size={32} />
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium" style="color: var(--text-tertiary);">Inactivas</p>
              <p class="text-4xl font-bold mt-2" style="color: var(--accent-red);">{inactivas}</p>
            </div>
            <div class="p-3 rounded-xl" style="background-color: var(--bg-tertiary);">
              <Icon name="x-circle" size={32} />
            </div>
          </div>
        </div>
      </div>

      <!-- Table Card -->
      <div class="card">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead style="background-color: var(--bg-tertiary); border-bottom: 2px solid var(--border-color);">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">
                  Categor√≠a
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">
                  Descripci√≥n
                </th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">
                  Estado
                </th>
                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">
                  Fecha Creaci√≥n
                </th>
                <th class="px-6 py-4 text-right text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody style="border-top: 1px solid var(--border-color);">
              {categorias.length === 0 ? (
                <tr>
                  <td colspan="5" class="px-6 py-12 text-center">
                    <div class="flex flex-col items-center justify-center">
                      <Icon name="tag" size={64} />
                      <p class="text-lg font-medium mt-4" style="color: var(--text-secondary);">No hay categor√≠as registradas</p>
                      <p class="text-sm mt-1" style="color: var(--text-tertiary);">Crea tu primera categor√≠a para comenzar</p>
                    </div>
                  </td>
                </tr>
              ) : (
                categorias.map((cat) => (
                  <tr class="border-b transition-colors duration-150" style="border-color: var(--border-color);" onmouseover="this.style.backgroundColor='var(--bg-tertiary)'" onmouseout="this.style.backgroundColor=''">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-3">
                        <Icon name="tag" size={20} />
                        <div>
                          <div class="text-sm font-bold" style="color: var(--text-primary);">{cat.nombre_categoria}</div>
                          <div class="text-xs" style="color: var(--text-tertiary);">ID: {cat.categoria_id}</div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm max-w-md" style="color: var(--text-secondary);">
                        {cat.descripcion ? (
                          <span>{cat.descripcion}</span>
                        ) : (
                          <span style="color: var(--text-tertiary);">Sin descripci√≥n</span>
                        )}
                      </div>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <span class={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold`} style={`color: ${cat.estado === 'activo' ? 'var(--accent-green)' : 'var(--accent-red)'}; background-color: var(--bg-tertiary);`}>
                        <Icon name={cat.estado === 'activo' ? 'check-circle' : 'x-circle'} size={14} />
                        {cat.estado === 'activo' ? 'Activo' : 'Inactivo'}
                      </span>
                    </td>
                    <td class="px-6 py-4 text-center text-sm" style="color: var(--text-secondary);">
                      <div class="font-medium">
                        {new Date(cat.fecha_creacion).toLocaleDateString('es-ES', {
                          day: '2-digit',
                          month: 'short',
                          year: 'numeric'
                        })}
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex justify-end gap-2">
                        <button
                          type="button"
                          class="btn-editar btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style="color: var(--accent-blue);"
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          data-cat-id={cat.categoria_id}
                          data-cat-nombre={cat.nombre_categoria}
                          data-cat-descripcion={cat.descripcion || ''}
                          title="Editar"
                        >
                          <Icon name="pencil" size={18} />
                        </button>
                        <button
                          type="button"
                          class="btn-estado btn-action p-2 rounded-lg transition-all duration-200 hover:scale-110"
                          style={`color: ${cat.estado === 'activo' ? 'var(--accent-red)' : 'var(--accent-green)'};`}
                          onmouseover="this.style.backgroundColor='var(--bg-tertiary)'"
                          onmouseout="this.style.backgroundColor=''"
                          data-id={cat.categoria_id}
                          data-estado={cat.estado === 'activo' ? 'inactivo' : 'activo'}
                          title={cat.estado === 'activo' ? 'Desactivar' : 'Activar'}
                        >
                          <Icon name={cat.estado === 'activo' ? 'x-circle' : 'check-circle'} size={18} />
                        </button>
                      </div>
                    </td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Crear -->
  <div id="modal-crear" class="hidden fixed inset-0 z-[100] overflow-y-auto">
    <div class="fixed inset-0 bg-black bg-opacity-70 transition-opacity" onclick="document.getElementById('modal-crear').classList.add('hidden')"></div>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg transform overflow-hidden rounded-2xl p-6 shadow-2xl transition-all z-[101]" style="background-color: var(--bg-secondary);">
        <div class="border-b pb-4 mb-6" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="tag" size={28} />
            Nueva Categor√≠a
          </h3>
        </div>

        <form method="POST" action="/api/categorias">
          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Nombre de la categor√≠a <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="text"
                name="nombre_categoria"
                required
                placeholder="Ej: Electr√≥nica, Ropa, Deportes..."
                class="input"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Descripci√≥n
              </label>
              <textarea
                name="descripcion"
                rows="4"
                placeholder="Describe esta categor√≠a..."
                class="input resize-none"
              ></textarea>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button type="submit" class="flex-1 btn-primary">
              Crear Categor√≠a
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-crear').classList.add('hidden')"
              class="btn-secondary"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Editar -->
  <div id="modal-editar" class="hidden fixed inset-0 z-[100] overflow-y-auto">
    <div class="fixed inset-0 bg-black bg-opacity-70 transition-opacity" onclick="document.getElementById('modal-editar').classList.add('hidden')"></div>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg transform overflow-hidden rounded-2xl p-6 shadow-2xl transition-all z-[101]" style="background-color: var(--bg-secondary);">
        <div class="border-b pb-4 mb-6" style="border-color: var(--border-color);">
          <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
            <Icon name="pencil" size={28} />
            Editar Categor√≠a
          </h3>
        </div>

        <form method="POST" action="/api/categorias">
          <input type="hidden" name="_method" value="PUT" />
          <input type="hidden" name="categoria_id" id="edit-id" />

          <div class="space-y-5">
            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Nombre de la categor√≠a <span style="color: var(--accent-red);">*</span>
              </label>
              <input
                type="text"
                name="nombre_categoria"
                id="edit-nombre"
                required
                class="input"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">
                Descripci√≥n
              </label>
              <textarea
                name="descripcion"
                id="edit-descripcion"
                rows="4"
                class="input resize-none"
              ></textarea>
            </div>
          </div>

          <div class="flex gap-3 mt-6">
            <button type="submit" class="flex-1 btn-primary">
              Guardar Cambios
            </button>
            <button
              type="button"
              onclick="document.getElementById('modal-editar').classList.add('hidden')"
              class="btn-secondary"
            >
              Cancelar
            </button>
          </div>
        </form>
    </div>
  </div>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('‚úÖ Script cargado');
      
      let procesando = false;
      
      // Event delegation para botones de editar (evita m√∫ltiples listeners)
      document.body.addEventListener('click', function(e) {
        const btnEditar = e.target.closest('.btn-editar');
        if (btnEditar && !procesando) {
          e.preventDefault();
          e.stopPropagation();
          e.stopImmediatePropagation();
          
          procesando = true;
          
          const id = btnEditar.getAttribute('data-cat-id');
          const nombre = btnEditar.getAttribute('data-cat-nombre');
          const descripcion = btnEditar.getAttribute('data-cat-descripcion');
          
          console.log('üìù Editar categor√≠a:', { id, nombre, descripcion });
          
          const editId = document.getElementById('edit-id');
          const editNombre = document.getElementById('edit-nombre');
          const editDescripcion = document.getElementById('edit-descripcion');
          const modalEditar = document.getElementById('modal-editar');
          
          if (editId && editNombre && editDescripcion && modalEditar) {
            editId.value = id;
            editNombre.value = nombre;
            editDescripcion.value = descripcion;
            
            // Forzar la remoci√≥n de hidden y mostrar el modal
            modalEditar.classList.remove('hidden');
            
            // Verificar y remover hidden nuevamente si es necesario
            if (modalEditar.classList.contains('hidden')) {
              modalEditar.className = modalEditar.className.replace('hidden', '');
            }
            
            // Forzar display con !important mediante inline style
            modalEditar.style.cssText = 'display: block !important; z-index: 9999 !important;';
            
            console.log('‚úÖ Modal abierto');
            console.log('Clases del modal:', modalEditar.className);
            console.log('Tiene hidden?:', modalEditar.classList.contains('hidden'));
            
            // Test visual - hacer scroll al modal
            modalEditar.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Alert de prueba
            alert('El modal deber√≠a estar visible ahora. ¬øLo ves?');
          } else {
            console.error('‚ùå No se encontraron los elementos del modal');
            console.error({ editId, editNombre, editDescripcion, modalEditar });
          }
          
          setTimeout(function() { procesando = false; }, 300);
          return false;
        }
        
        // Event delegation para botones de estado
        const btnEstado = e.target.closest('.btn-estado');
        if (btnEstado && !procesando) {
          e.preventDefault();
          e.stopPropagation();
          e.stopImmediatePropagation();
          
          procesando = true;
          
          const id = btnEstado.getAttribute('data-id');
          const nuevoEstado = btnEstado.getAttribute('data-estado');
          
          const mensaje = nuevoEstado === 'activo'
            ? '¬øActivar esta categor√≠a?'
            : '¬øDesactivar esta categor√≠a?';

          if (!confirm(mensaje)) {
            procesando = false;
            return false;
          }

          fetch('/api/categorias', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              _method: 'PATCH',
              categoria_id: parseInt(id),
              estado: nuevoEstado
            })
          })
          .then(response => {
            if (response.ok) {
              window.location.reload();
            } else {
              alert('Error al cambiar el estado');
              procesando = false;
            }
          })
          .catch(error => {
            alert('Error: ' + error.message);
            procesando = false;
          });
          
          return false;
        }
      }, true); // Usar capturing phase

      // Cerrar modales al hacer clic fuera
      ['modal-crear', 'modal-editar'].forEach(function(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
          modal.addEventListener('click', function(e) {
            if (e.target === this) {
              this.classList.add('hidden');
              this.style.display = 'none';
            }
          });
        }
      });

      // Cerrar modales con Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          const modalCrear = document.getElementById('modal-crear');
          const modalEditar = document.getElementById('modal-editar');
          if (modalCrear) {
            modalCrear.classList.add('hidden');
            modalCrear.style.display = 'none';
          }
          if (modalEditar) {
            modalEditar.classList.add('hidden');
            modalEditar.style.display = 'none';
          }
        }
      });
    });
  </script>
</Layout>
